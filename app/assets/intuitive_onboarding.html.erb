          <div
            class="
              relative rounded-3xl overflow-hidden shadow-2xl border
              border-white/10 bg-neutral-800
            "
          >
            <%= image_tag "features/interactive_tour.png", alt: "Hadaa Interactive Tour Interface", class: "w-full h-auto opacity-90 hover:opacity-100 transition-opacity duration-500" %>
          </div>
        </div>
      </div>
