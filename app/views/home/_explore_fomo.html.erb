<section id="explore-fomo" class="py-20 bg-gray-900 text-white overflow-hidden">
  <div class="mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-6xl font-extrabold mb-4 leading-tight text-white">
        Don't Just Dream It. <span class="text-accent block sm:inline">See What's Possible.</span>
      </h2>
      <p class="text-xl md:text-2xl max-w-4xl mx-auto text-neutral-300">
        Join the <b>10,000+ designers</b> turning ideas into reality. These designs were generated in the last 24 hours.
      </p>
    </div>
    <div class="w-full flex justify-center">
      <div class="w-full max-w-6xl columns-2 sm:columns-3 md:columns-4 gap-4 md:gap-6">
        <% # The array is iterated twice in the original code, retaining that structure %>
        <% [@mask_requests].flatten.each_with_index do |request, index| %>
          <% if image = request.face_image %>
            <div class="mb-4 md:mb-6 break-inside-avoid">
              <div class="rounded-xl shadow-2xl overflow-hidden cursor-pointer
                  transition-all duration-300 ease-in-out
                  hover:scale-[1.05] hover:shadow-accent/50 hover:shadow-2xl relative group">
                <%= image_tag url_for(image.variant(resize_to_limit: [400, 400])),
                    loading: index < 10 ? :eager : :lazy,
                    alt: "AI Landscaping Design in #{request.preset.humanize} Style",
                    title: "#{request.preset.humanize} Style Design",
                    class: "w-full h-auto" %>
                <h4 class="flex w-fit items-center absolute top-3 right-3 bg-secondary text-white text-sm font-bold px-3 py-1 rounded-full opacity-90 transition duration-300 group-hover:opacity-100 ring-1 ring-black/30">
                  <%= "#{request.preset.humanize} Style" %>
                </h4>
                <div class="absolute bottom-4 left-1/2 -translate-x-1/2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 w-8/12">
                  <%= render ButtonComponent.new(
                    text: "Design Details ðŸ”’",
                    href: explore_path(request),
                    classes: "bg-black/70 text-white text-sm font-bold py-2 px-4 rounded-full shadow-lg ring-2 ring-white/70 hover:bg-black/90"
                  ) %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="text-center mt-20">
      <h3 class="text-3xl font-bold mb-6 text-primary">Bring your ideas to life</h3>
      <br>
      <%= link_to "Try now, it's free!", new_user_registration_path, class:"bg-accent hover:bg-yellow-500 text-black font-extrabold text-xl py-5 px-12 rounded-full shadow-[0_10px_30px_-10px_rgba(255,200,0,0.8)] transition duration-300 ease-in-out transform hover:scale-110" %>
    </div>
  </div>
</section>
