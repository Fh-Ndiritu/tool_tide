<div class="min-h-screen flex flex-col items-center justify-center relative bg-[#1a1a1a] text-white font-sans selection:bg-[#00acc1] selection:text-black"
     data-controller="onboarding-survey"
     data-onboarding-survey-target="celebration">

  <!-- Background Effects -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-[#121212] via-[#1a1a1a] to-[#212121] z-0"></div>
    <div class="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-10 mix-blend-overlay z-0"></div>
    <div class="absolute top-1/4 left-1/4 w-[600px] h-[600px] bg-[#5c6bc0]/10 rounded-full mix-blend-screen filter blur-[100px] animate-blob"></div>
    <div class="absolute bottom-1/4 right-1/4 w-[500px] h-[500px] bg-[#00acc1]/10 rounded-full mix-blend-screen filter blur-[100px] animate-blob animation-delay-2000"></div>
  </div>

  <!-- Content Card -->
  <div class="relative z-10 max-w-lg w-full px-6">
    <div class="bg-white/5 border border-white/10 backdrop-blur-xl rounded-2xl p-6 md:p-8 text-center shadow-2xl animate-enter-up">

      <div class="mb-2 transform h-16 flex items-center justify-center">
        <span class="text-5xl md:text-6xl animate-bounce-slow">ðŸŽ‰</span>
      </div>

      <h1 class="text-3xl md:text-4xl font-extrabold mb-3 tracking-tight text-white">
        Welcome to Hadaa!
      </h1>

      <p class="text-base text-neutral-300 mb-6 leading-relaxed font-light">
        Your account is ready. Choose how you'd like to proceed:
      </p>

      <div class="flex flex-col gap-4 mb-6">
        <%= link_to "Purchase Credits", credits_path, class: "w-full inline-flex items-center justify-center px-6 py-3 text-lg font-bold text-black bg-[#00acc1] rounded-xl hover:bg-[#26c6da] transition-all duration-300 shadow-lg" %>

        <%= link_to "Tour Around", new_project_path, class: "w-full inline-flex items-center justify-center px-6 py-3 text-lg font-bold text-white bg-white/10 border border-white/10 rounded-xl hover:bg-white/20 transition-all duration-300" %>
      </div>

      <div class="bg-[#1a1a1a]/50 rounded-xl p-4 my-3 mb-6 text-left border border-white/5">
         <p class="text-[10px] font-bold text-neutral-500 uppercase tracking-widest mb-3 border-b border-white/5 pb-2">
          Pro Tips to get started
        </p>
        <div class="space-y-3">
          <%= link_to new_project_path, class: "flex gap-4 items-start group py-4" do %>
            <div class="w-10 h-10 rounded-xl bg-white/5 border border-white/10 flex items-center justify-center text-xl shrink-0 group-hover:bg-[#00acc1]/20 group-hover:border-[#00acc1]/30 transition-colors duration-300">ðŸŽ¨</div>
            <div>
              <h4 class="font-bold text-white text-sm mb-0.5 group-hover:text-[#00acc1] transition-colors">Create Full Designs</h4>
              <p class="text-xs text-neutral-400 leading-relaxed">Use properties to reimagine your entire space instantly.</p>
            </div>
          <% end %>
          <%= link_to new_project_path, class: "flex gap-4 items-start group py-4" do %>
            <div class="w-10 h-10 rounded-xl bg-white/5 border border-white/10 flex items-center justify-center text-xl shrink-0 group-hover:bg-[#f23faf]/20 group-hover:border-[#f23faf]/30 transition-colors duration-300">âœ¨</div>
            <div>
              <h4 class="font-bold text-white text-sm mb-0.5 group-hover:text-[#f23faf] transition-colors">Refine with Precision</h4>
              <p class="text-xs text-neutral-400 leading-relaxed">Tweak specific details until they're absolutely perfect.</p>
            </div>
          <% end %>
        </div>
      </div>


    </div>
  </div>
</div>

<style>
  @keyframes enter-up {
    0% {
      opacity: 0;
      transform: translateY(30px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
  @keyframes blob {
    0% { transform: translate(0px, 0px) scale(1); }
    33% { transform: translate(30px, -50px) scale(1.1); }
    66% { transform: translate(-20px, 20px) scale(0.9); }
    100% { transform: translate(0px, 0px) scale(1); }
  }
   @keyframes bounce-slow {
    0%, 100% { transform: translateY(-5%); }
    50% { transform: translateY(5%); }
  }
  .animate-enter-up {
    animation: enter-up 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }
  .animate-blob {
    animation: blob 10s infinite;
  }
  .animate-bounce-slow {
    animation: bounce-slow 3s infinite ease-in-out;
  }
  .animation-delay-2000 {
    animation-delay: 2s;
  }
</style>
