<% content_for :title, "Canvas" %>
<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl md:text-4xl font-extrabold text-neutral-900">
      Your Generations
    </h1>
  </div>
  <div id="canvas" class="grid grid-cols-1 gap-6 md:gap-8">
    <% if @canvas.any? %>
      <% @canvas.each do |canva| %>
        <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 p-6">
          <%= render canva %>
        </div>
      <% end %>
    <% else %>
      <div class="text-center my-16 p-8 bg-white rounded-xl shadow-md">
        <p class="text-lg text-gray-500">
          No Designs found. Start a new project to see your designs here.
        </p>
      </div>
    <% end %>
  </div>
</div>
