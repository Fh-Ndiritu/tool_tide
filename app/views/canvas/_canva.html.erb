<div id="<%= dom_id canva %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">User:</strong>
    <%= canva.user_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Image:</strong>
    <%= link_to canva.image.filename, canva.image, class: "text-gray-700 underline hover:no-underline" if canva.image.attached? %>
  </div>
</div>
