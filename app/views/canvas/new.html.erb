<% content_for :title, "Start New Design | Upload Your Garden Photo - Hadaa" %>

<% content_for :description, "Begin your AI garden design journey. Upload a photo of your outdoor space and transform it with our AI-powered landscape design tools. Get your first design free - no credit card required." %>

<div
  data-controller="canvas"
  class="
    relative min-h-[70vh] flex flex-col items-center p-4 sm:p-6 lg:p-8
    w-full overflow-hidden
  "
>
  <!-- Background Effects -->

  <div class="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-10 mix-blend-overlay z-0 pointer-events-none"></div>
  <div class="absolute top-1/4 left-1/4 w-[600px] h-[600px] bg-[#5c6bc0]/10 rounded-full mix-blend-screen filter blur-[100px] animate-blob pointer-events-none"></div>
  <div class="absolute bottom-1/4 right-1/4 w-[500px] h-[500px] bg-[#00acc1]/10 rounded-full mix-blend-screen filter blur-[100px] animate-blob animation-delay-2000 pointer-events-none"></div>

  <div class="relative z-10 w-full sm:max-w-lg lg:max-w-5xl">
    <%= render 'shared/balances' %>

    <div
      data-canvas-target="uploadSection"
      class="bg-white/10 border border-white/20 backdrop-blur-xl shadow-2xl rounded-3xl p-2 sm:p-8 text-center animate-enter-up"
    >
      <h1 class="text-2xl md:text-4xl font-bold text-center text-white my-8">
        Bring your Landscape to life!
      </h1>
      <div
        data-action="dragover->canvas#dragOver dragleave->canvas#dragLeave drop->canvas#drop click->canvas#triggerFileInput"
        data-canvas-target="dropZone"
        data-onboarding-target="upload"
        class="
          flex flex-col justify-center min-h-[200px] gap-6 border-2 border-dashed border-white/20
          rounded-2xl p-8 sm:p-12 items-center text-center text-neutral-200
          bg-white/5 backdrop-blur-sm
          hover:bg-white/10 hover:border-[#00acc1] transition-all
          duration-300 cursor-pointer group
        "
      >
        <div class="flex flex-col w-full md:w-9/12 items-center gap-4 justify-center">
          <%= render(IconComponent.new(name: "upload", classes: "h-12 w-12 text-neutral-400 group-hover:text-[#00acc1] transition-colors duration-300")) %>
          <p class="text-lg fancy-text">
            Click to upload an Image
          </p>
        </div>
        <%= render 'form', canva: @canva %>
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes enter-up {
    0% { opacity: 0; transform: translateY(20px); }
    100% { opacity: 1; transform: translateY(0); }
  }
  @keyframes blob {
    0% { transform: translate(0px, 0px) scale(1); }
    33% { transform: translate(30px, -50px) scale(1.1); }
    66% { transform: translate(-20px, 20px) scale(0.9); }
    100% { transform: translate(0px, 0px) scale(1); }
  }
  .animate-enter-up { animation: enter-up 0.6s ease-out forwards; }
  .animate-blob { animation: blob 10s infinite; }
  .animation-delay-2000 { animation-delay: 2s; }
</style>
