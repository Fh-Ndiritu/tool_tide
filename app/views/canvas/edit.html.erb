<% content_for :title, "Editing canva" %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing canva</h1>

  <%= render "form", canva: @canva %>

  <%= link_to "Show this canva", @canva, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= link_to "Back to canvas", canvas_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
</div>
