<% if mask_request.complete?  && mask_request.main_view.attached? %>
  <div class="container mx-auto py-4 <%= 'compact' if defined?(compact) %>">
    <div
      class="
        bg-white rounded-2xl shadow-2xl border border-gray-100 p-6 sm:p-8
        md:p-10 space-y-6 md:space-y-10
      "
    >
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-2">
        <div class="flex flex-col">
          <h3 class="text-xl md:text-4xl font-extrabold leading-tight text-secondary">
            Results for
            <span class="text-accent"><%= mask_request.preset.humanize %></span>
            Style Design
          </h3>

          <h4 class="text-base font-medium text-gray-500">
            <%= mask_request.user_error %>
          </h4>
        </div>

        <% favorite = current_user.favorites.find_by(favoritable: mask_request) %>

        <div class="flex-shrink-0">
          <%= render 'favorites/favorite_button',
          favoritable: mask_request,
          favorite: favorite %>
        </div>
      </div>

      <div class="flex flex-wrap max-sm:justify-center gap-3">
        <%= link_to "Brush Edit", new_canva_mask_request_path(mask_request.canva), class: "!max-w-[45%] cute-btn btn-secondary " %>
        <%= link_to "New Design", new_canva_path, class: "!max-w-[45%] cute-btn btn-primary "  unless defined?(compact) %>
        <%= link_to "Change Style", edit_mask_request_path(mask_request, manual: true), class: "!max-w-[45%] cute-btn !bg-accent-secondary !text-gray-800 " %>
        <%= link_to "Ai Editor", new_text_request_path(signed_blob_id:  mask_request.main_view.blob.signed_id), class: "!max-w-[45%] cute-btn btn-accent " %>
        <%= link_to "Show", mask_request_path(mask_request), class: "!max-w-[45%] cute-btn !bg-cta-bg " if defined?(compact) %>
      </div>

      </div>

      <% unless current_user.afford_generation? %>
        <div class="bg-gradient-to-r from-accent/10 to-secondary/10 rounded-xl p-6 text-center border border-accent/20 shadow-sm my-6">
           <h3 class="text-xl font-bold text-gray-900 mb-2">‚ú® Unlock Premium Views</h3>
           <p class="text-gray-600 mb-4">
             Get access to high-resolution rotated and drone views, and generate unlimited designs.
           </p>
           <%= link_to "Get Credits & Unlock", credits_path, class: "cute-btn btn-primary inline-block !w-auto px-8" %>
        </div>
      <% end %>

      <hr class="border-t border-neutral-200">

      <% views = [mask_request.main_view, mask_request.rotated_view, mask_request.drone_view].compact.select(&:attached?)

      gallery_data = views.map.with_index do |view, index|
        { url: rails_blob_path(view), title: "#{index+1}. #{view.name.humanize}", index: index }
      end %>

      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8"
        data-controller="gallery"
        data-gallery-images-value="<%= gallery_data.to_json %>"
        data-gallery-modal-target="#gallery-modal"
      >
        <% views.each_with_index do |view, index| %>
          <% full_url = rails_blob_path(view) %>

          <% auxiliary_image_class = if defined?(compact) && index > 0
                                    'hidden sm:block'
                                  else
                                    ''
                                  end %>

          <div
            class="
              group relative overflow-hidden rounded-lg shadow-xl cursor-pointer
              transition-all duration-300 transform hover:-translate-y-1 hover:shadow-2xl
              <%= auxiliary_image_class %>
            "
          >
            <a href="<%= full_url %>" data-action="gallery#open" class="block">
              <%= image_tag(view.variant(resize_to_limit: [500, 500]), loading: :lazy, class: "w-full max-h-[250px] sm:max-h-[400px] object-cover transition-transform duration-500 group-hover:scale-[1.02]") %>

              <div
                class="
                  absolute inset-0 bg-gradient-to-t from-black/80
                  via-transparent to-transparent
                "
              ></div>
            </a>

            <div
              class="
                absolute bottom-3 left-4 right-4 text-white
                pointer-events-none
              "
            >
              <p class="text-sm font-medium opacity-80">
                <%= view.name.humanize %>
              </p>
            </div>

            <div class="absolute bottom-3 right-4 z-20 flex space-x-2">
              <%= link_to "#", class: "icon-btn bg-secondary/40 hover:bg-secondary/70 text-white" do %>
                <%= render(IconComponent.new(classes: "h-5 w-5", name: "expand")) %>
              <% end %>

              <%= link_to rails_blob_path(view, disposition: :attachment), class: "icon-btn bg-accent-secondary/40 hover:bg-accent-secondary/70 text-white" do %>
                <%= render(IconComponent.new(classes: "h-5 w-5", name: "download")) %>
              <% end unless defined?(compact) %>

              <%= link_to new_text_request_path(signed_blob_id:  view.blob.signed_id), class: "icon-btn bg-accent/90 hover:bg-accent text-white" do %>
                <%= render(IconComponent.new(classes: "h-5 w-5", name: "pencil")) %>
              <% end %>
            </div>
          </div>
        <% end %>

        <%= render 'mask_requests/gallery_modal' %>
      </div>

      <% if mask_request.plants.present? && !defined?(compact) %>
        <div class="planting_and_design_guide space-y-8">
          <section>
            <h3
              class="
                text-3xl font-bold text-gray-800 border-b-2 border-accent
                pb-2 mb-6
              "
            >
              üè° Design & Feature Breakdown
            </h3>

            <div class="prose max-w-none text-gray-700">
              <%= raw markdown(mask_request.features) %>
            </div>
          </section>

          <hr class="border-t border-neutral-200">

          <section>
            <h3
              class="
                text-3xl font-bold text-gray-800 border-b-2 border-accent
                pb-2 mb-6
              "
            >
              üå± Planting Guide: Suggested Varieties
            </h3>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <% mask_request.mask_request_plants.each do |mp| %>
                <div class="flex flex-col justify-between bg-white p-4 rounded-xl shadow-md border border-neutral-200">
                  <div class="mb-2">
                    <div class="flex items-center gap-3 mb-3">
                      <span class="text-xl font-extrabold text-accent whitespace-nowrap"><%= mp.quantity %>x</span>
                      <%= link_to "https://www.google.com/search?q=#{CGI.escape(mp.plant.english_name + ' plant')}&tbm=isch", target: "_blank", rel: "noopener noreferrer", class: "flex items-center gap-2 bg-white hover:bg-gray-50 border border-gray-300 rounded-lg px-3 py-2 transition-all hover:shadow-md group flex-1 w-full" do %>
                        <svg class="w-5 h-5 flex-shrink-0" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                          <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                          <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                          <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                          <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
                        </svg>
                        <span class="font-bold text-base text-gray-700 group-hover:text-gray-900 flex-1"><%= mp.plant.english_name %></span>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 text-gray-400 group-hover:text-gray-600 flex-shrink-0">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
                        </svg>
                      <% end %>
                    </div>

                    <p class="text-sm text-neutral-600 mt-2"><%= mp.plant.description %></p>
                    <div class="mt-3 text-xs text-secondary opacity-80 bg-neutral-100 inline-block px-2 py-1 rounded font-medium">
                      Max Size: <span class="font-bold"><%= mp.plant.size %> ft</span> (width x height)
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </section>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
