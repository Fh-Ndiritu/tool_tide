<div id="gallery-modal" class="fixed inset-0 z-50 bg-black/90 hidden h-screen bottom-0 top-0 left-0" data-gallery-target="modalContainer">
  <div class="relative w-full h-full flex items-center justify-center p-4 sm:p-8">

    <%# Close Button (Top Right) %>
    <button
      data-action="gallery#close"
      class="absolute top-4 right-4 text-secondary text-4xl z-50 opacity-80 hover:opacity-100 transition-opacity focus:outline-none p-2 rounded-full bg-white/40 hover:bg-white/70 h-12 w-12 flex items-center justify-center cursor-pointer"
      aria-label="Close Gallery"
    >
      &times;
    </button>

    <%# Image Container with Max Width Constraint (700px) %>
    <div
      class="flex flex-col justify-center items-center w-full h-full max-w-[700px] lg:max-w-5xl mx-auto relative"
      aria-live="polite"
      aria-atomic="true"
    >
      <img
        data-gallery-target="modalImage"
        class="max-w-full max-h-[85vh] object-contain rounded-xl shadow-2xl transition-opacity duration-500"
        alt="Current gallery image"
      />

      <%# Title Bar - Fixed to bottom of the image container %>
      <div
        data-gallery-target="modalTitle"
        class="absolute bottom-0 left-0 right-0 text-center text-secondary text-lg font-semibold bg-black/60 backdrop-blur-sm py-3 px-4 rounded-b-xl w-full"
      >
        Image Title
      </div>
    </div>

    <%# Previous Button %>
    <button
      data-action="gallery#previous"
      class="absolute left-2 md:left-4 z-40 p-4 rounded-full bg-white/40 hover:bg-white/70 text-secondary text-3xl transition-colors focus:outline-none disabled:opacity-50 cursor-pointer"
      aria-label="Previous Image"
    >
      &#10094;
    </button>

    <%# Next Button %>
    <button
      data-action="gallery#next"
      class="absolute right-2 md:right-4 z-40 p-4 rounded-full bg-white/40 hover:bg-white/70 text-secondary text-3xl transition-colors focus:outline-none disabled:opacity-50 cursor-pointer"
      aria-label="Next Image"
    >
      &#10095;
    </button>

  </div>
</div>
