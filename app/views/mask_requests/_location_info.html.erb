<% if user.address.present? %>
  <% if defined?(use_location) && use_location || !defined?(use_location) %>
    <div class="flex items-center gap-1 text-green-400">
      <%= render(IconComponent.new(name: "map_pin", classes: "h-3 w-3")) %>
      <span>Using location: <%= user.state_address %></span>
    </div>
    <% else %>
      <span class="text-neutral-400">Enable location for local plant suggestions</span>
    <% end %>
<% else %>
  <span class="text-neutral-400">Enable location for local plant suggestions</span>
<% end %>
