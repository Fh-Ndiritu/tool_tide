    <% if user_signed_in? %>
      <script>
        FS('setIdentity', {
          uid: '<%= current_user.id %>',
          properties: {
            displayName: '<%= current_user.user_name || current_user.name || current_user.email %>',
            email: '<%= current_user.email %>'
          }
        });
      </script>
    <% end %>
  </head>

  <body
    data-controller="loader <%= user_signed_in? ? 'onboarding' : '' %>"
    data-onboarding-stage-value="<%= current_user.onboarding_stage if user_signed_in? %>"
    data-onboarding-complete-request-count-value="<%= current_user.text_requests.complete.count if user_signed_in? %>"
    data-onboarding-current-request-progress-value="<%= (@current_request || @text_request || @mask_request)&.progress if user_signed_in? %>"
  >
    <% show_loader = defined?(@mask_request) && @mask_request&.processing? %>
    <%= render partial: "layouts/shared/loader", locals: { record: (show_loader ? @mask_request : nil), klasses: "#{show_loader ? '' : 'hidden'} fixed" } %>
    <% if user_signed_in? %>
      <%= render "shared/navbar" %>
    <% end %>
    <%= render "shared/flash" %>
    <% if user_signed_in? %>
      <%= render "shared/onboarding_modal" %>
      <%= render "shared/voucher_modal" %>
    <% end %>

    <main class="<%= content_for(:main_classes) %>">
      <div class="w-full m-auto block"><%= yield %></div>
    </main>
  </body>
</html>
