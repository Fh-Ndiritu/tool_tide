<%= turbo_frame_tag 'loader' do %>
  <div data-loader-target="loadingSection" class="<%= klasses if defined?(klasses) %> fixed inset-0 bg-black opacity-85 flex flex-col items-center justify-center z-50">
    <div class="inline-block h-12 w-12 animate-spin rounded-full border-4 border-solid border-current border-e-transparent text-white" role="status">
    </div>
    <p class="text-xl text-white mt-4" data-loader-target="processingMessage"> <%= progress_message(mask_request&.progress) %></p>
  </div>
<% end %>
