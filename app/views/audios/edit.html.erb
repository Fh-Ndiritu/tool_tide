<% content_for :title, "Editing audio" %>

<!-- Center the entire content block and apply consistent vertical padding, matching the creation view style -->
<div class="max-w-4xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
  <!-- Title uses --color-text-dark (mapped to text-neutral-900) -->
  <h1 class="font-bold text-4xl text-neutral-900 mb-8">Editing Audio</h1>

  <%= render "form", audio: @audio %>

  <!-- Action links centered below the form -->
  <div class="mt-6 text-center space-x-4">
    <!-- Primary CTA Button: Uses bg-cta-bg and hovers to bg-primary -->
    <%= link_to "Show this audio", @audio, class: "rounded-lg px-6 py-3 bg-cta-bg hover:bg-primary text-white inline-block font-medium transition duration-200 shadow-md hover:shadow-lg" %>

    <!-- Secondary/Neutral Button: Uses a bg-accent-secondary background and text-primary text -->
    <%= link_to "Back to audios", audios_path, class: "rounded-lg px-6 py-3 bg-accent-secondary hover:bg-neutral-300 text-primary inline-block font-medium transition duration-200 shadow-sm hover:shadow-md" %>
  </div>
</div>
