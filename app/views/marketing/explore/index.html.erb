                    <%= image_tag request.main_view.variant(:dashboard), loading: :lazy, decoding: :async, alt: "Tropical Garden Design - User Generated #{index}", class: "w-full h-auto block" %>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </section>
  <% end %>

  <!-- Cottage Section -->
