<% content_for :title, "Explore AI Garden Designs | Community Gallery - Hadaa" %>

<% content_for :description, "Browse thousands of AI-generated garden and landscape designs from our community. Get inspired by real user projects and discover what's possible with Hadaa's AI landscape design tools." %>

<div
  class="
    flex flex-col items-center justify-center pt-16 pb-20 px-4 sm:px-6 lg:px-8
    bg-neutral-900 text-text-light min-h-screen
  "
>


  <!-- Section 1: Introduction and Main CTA -->
  <div class="max-w-4xl text-center">
    <h1
      class="
        text-5xl sm:text-6xl lg:text-7xl font-extrabold tracking-tighter
        text-text-light md:leading-tight
      "
    >
      What Others Are <span class="text-primary">Building</span>
    </h1>

    <p class="mt-6 text-xl text-neutral-300 max-w-3xl mx-auto">
      Find inspiration from a gallery of amazing projects created by our
      community. Explore the possibilities and see how to transform your
      landscape using Hadaa Ai Landscaper. The best results are often obtained
      by drawing precise areas you wish to modify.
    </p>

    <%= link_to new_user_registration_url(host: "hadaa.app"), rel: "nofollow noreferrer", class: "
        inline-flex items-center gap-3 bg-gradient-to-r from-accent/20
        to-secondary/20 border-2 border-accent/50 rounded-full px-6 py-3
        mt-6 hover:scale-105 transition-transform duration-300 group animate-pulse-scale hover:animate-none relative z-20
      " do %>
      <span class="text-3xl animate-bounce">üéÅ</span>
      <div class="text-left">
        <p class="text-sm font-bold text-accent uppercase tracking-wide max-sm:text-xs">
          Signup for the Free Plan - No Credit Card
        </p>
        <p class="text-xs text-neutral-200 max-sm:text-xs">Mask Designer and Ai Editor</p>
      </div>
    <% end %>
  </div>

  <!-- Section 2: Image Gallery -->
  <!-- Section 2: Image Gallery -->
  <div class="w-full max-w-full mx-auto mt-20 pb-28">
    <div
      data-controller="masonry"
      data-masonry-item-selector-value=".masonry-item"
      class="w-full"
    >
      <% @mask_requests.each_with_index do |request, index| %>
        <% if image = request.face_image %>
          <div class="masonry-item w-full sm:w-1/2 md:w-1/3 lg:w-1/4 mb-0 p-0">
            <div
              class="
                overflow-hidden transition-all
                duration-300 ease-in-out hover:scale-[1.03] hover:z-10
                relative group w-full
              "
            >
              <%= image_tag image.variant(resize_to_limit: [400, 400]), loading: index < 10 ? :eager : :lazy, alt: "Community #{request.preset.humanize} AI garden design - Explore Gallery", title: "#{request.preset.humanize} Style Design", class: "w-full h-auto block" %>
              <%= content_tag :h4, "#{request.preset.humanize} Style", class: "flex w-fit items-center absolute bottom-4 left-1/2 -translate-x-1/2 bg-black/60 backdrop-blur-sm text-white text-sm font-medium px-4 py-1.5 rounded-full opacity-80 group-hover:opacity-100 transition-opacity duration-300" %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Section 3: Final CTA -->
  <div class="max-w-2xl text-center">
    <h2
      class="
        text-5xl sm:text-6xl lg:text-7xl font-extrabold tracking-tight
        bg-clip-text text-transparent bg-gradient-to-r from-secondary to-accent-secondary
        pb-2
      "
    >
      Bring Your Ideas to Life
    </h2>
    <div class="mt-10">
      <%= link_to "Start Designing Now - Free Plan Available", new_user_registration_url(host: "hadaa.app"), rel: "nofollow noreferrer", class:"inline-flex items-center justify-center max-sm:text-sm bg-accent hover:bg-accent/80 text-black font-extrabold text-xl py-5 px-12 rounded-full shadow-[0_10px_40px_-10px_rgba(0,172,193,1)] transition duration-300 ease-in-out transform hover:scale-[1.15] relative z-20" %>
    </div>
  </div>
</div>
