  <!-- Mediterranean Section -->
  <% if @mediterranean_requests.size > 3 %>
    <section id="mediterranean" class="max-w-7xl mx-auto mt-32 px-4 sm:px-6 lg:px-8">
      <!-- Text Card -->
      <div class="relative rounded-3xl bg-neutral-900 border border-white/10 p-6 md:p-10 mb-12 overflow-hidden group hover:border-white/20 transition-all duration-500">
        <div class="absolute top-0 right-0 -mr-20 -mt-20 w-64 h-64 md:w-96 md:h-96 bg-blue-500/10 blur-[100px] rounded-full pointer-events-none"></div>
