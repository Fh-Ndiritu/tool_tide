<% content_for :title, "Contact Hadaa Support: Help with Your Renovation" %>
<% content_for :description, "Get in touch with the Hadaa team. Help with your renovation, questions, or feedback." %>

<div class="flex flex-col items-center justify-center min-h-screen bg-neutral-900 p-4 relative overflow-hidden">
  <%# Background Gradient %>
  <div class="absolute inset-0 z-0 pointer-events-none">
     <div class="absolute top-[-20%] left-[-10%] w-[50%] h-[50%] bg-purple-900/20 rounded-full blur-[120px]"></div>
     <div class="absolute bottom-[-20%] right-[-10%] w-[50%] h-[50%] bg-blue-900/20 rounded-full blur-[120px]"></div>
  </div>

  <div class="relative z-10 w-full max-w-2xl">
    <div class="text-center mb-10">
      <h1 class="text-4xl sm:text-5xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-white via-neutral-200 to-neutral-400 drop-shadow-sm">
        Contact Us
      </h1>
      <p class="mt-4 text-lg text-neutral-400 max-w-lg mx-auto leading-relaxed">
        We'd love to hear from you. Reach out with any questions, feedback, or just to say hello.
      </p>
    </div>

    <div class="bg-neutral-800/60 backdrop-blur-xl rounded-2xl border border-white/10 shadow-2xl overflow-hidden relative group">
      <div class="absolute inset-0 bg-gradient-to-b from-white/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"></div>

      <div class="p-8 sm:p-12 text-center">
        <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-accent/10 mb-6 ring-1 ring-accent/20">
             <%= render(IconComponent.new(name: "envelope", classes: "h-8 w-8 text-accent")) %>
        </div>

        <h2 class="text-xl font-semibold text-white mb-2">Email Support</h2>
        <p class="text-neutral-400 mb-8 text-sm">Our team is ready to assist you.</p>

        <a
          href="mailto:winnie@hadaa.app"
          class="
            inline-flex items-center justify-center gap-3 px-8 py-4
            bg-white/5 hover:bg-white/10 border border-white/10 hover:border-accent/40
            rounded-xl transition-all duration-300 group/link
          "
        >
          <span class="text-xl sm:text-2xl font-bold text-accent group-hover/link:text-white transition-colors">
            winnie@hadaa.app
          </span>
          <%= render(IconComponent.new(name: "arrow_right", classes: "h-5 w-5 text-neutral-500 group-hover/link:text-white transition-colors")) %>
        </a>

        <div class="mt-8 flex items-center justify-center gap-2 text-xs text-neutral-500 font-medium tracking-wide uppercase">
          <span class="w-1.5 h-1.5 rounded-full bg-emerald-500 animate-pulse"></span>
          Just send it, we'll get back to you as soon as possible :)
        </div>
      </div>
    </div>

  </div>
</div>
