<% content_for :title, "Homeowner Renovation FAQ: Costs, Zones & Plants" %>

<% content_for :description, "Frequently asked questions about Hadaa's AI landscape design. Learn about costs, hardiness zones, plant survival, and how to get construction-ready plans." %>

<% content_for :keywords, "Hadaa FAQ, AI landscape design questions, garden design help, plant recommendation questions, landscape planning FAQ, AI landscape editor control, professional workflow, AI 3D modeling sketch, drone view visualization, CAD alternative, garden logistics software" %>

<div
  class="
    bg-neutral-900 text-white min-h-screen font-sans selection:bg-accent
    selection:text-black
  "
>
  <%# --- Hero Section --- %>
  <section class="relative py-20 lg:py-32 overflow-hidden">
    <div
      class="
        absolute inset-0 bg-gradient-to-b from-black/80 via-neutral-900/90
        to-neutral-900 z-10
      "
    ></div>

    <div
      class="absolute inset-0 bg-cover bg-center opacity-40 z-0"
      style="background-image: url('<%= asset_path('faq_hero_bg.png') %>');"
    ></div>

    <div class="container mx-auto px-6 relative z-20 text-center">
      <span
        class="
          inline-block py-1 px-3 rounded-full bg-accent/10 border
          border-accent/30 text-accent text-sm font-bold tracking-wider mb-6
          animate-fade-in-up
        "
      >
        HELP CENTER
      </span>

      <h1
        class="
          text-5xl md:text-7xl font-extrabold tracking-tight mb-8
          leading-tight animate-fade-in-up delay-100
        "
      >
        Frequently Asked
        <br class="hidden md:block" />
        <span
          class="
            text-transparent bg-clip-text bg-gradient-to-r from-accent
            to-secondary
          "
        >
          Questions
        </span>
      </h1>

      <p
        class="
          text-xl md:text-2xl text-neutral-300 max-w-4xl mx-auto
          leading-relaxed mb-12 animate-fade-in-up delay-200 font-light
        "
      >
        Everything you need to know about Hadaa's AI-powered landscape design
        platform
      </p>
    </div>
  </section>

  <% faq_structured_data.each do |section| %>
    <section class="py-16 <%= section[:index].even? ? 'bg-neutral-900/50' : 'bg-neutral-900' %>">
      <div class="container mx-auto px-6 max-w-5xl">
        <div class="mb-12">
          <div class="flex items-center gap-4 mb-6">
            <div
              class="
                w-12 h-12 rounded-2xl <%= section[:index] == 0 ? 'bg-gradient-to-r from-accent to-secondary' : (section[:index] % 2 != 0 ? 'bg-accent' : 'bg-secondary') %> flex items-center
                justify-center text-black font-bold text-xl shadow-lg
                <%= section[:index] == 0 ? 'shadow-accent/20' : (section[:index] % 2 != 0 ? 'shadow-accent/20' : 'shadow-secondary/20') %>
              "
            >
              <%= section[:index] %>
            </div>
            <h2 class="text-3xl md:text-4xl font-bold text-white">
              <%= section[:category] %>
            </h2>
          </div>
        </div>

        <div class="space-y-6">
          <% section[:items].each do |item| %>
            <details
              class="
                group bg-neutral-800/30 backdrop-blur-sm rounded-2xl border border-white/5
                hover:border-accent/40 transition-all duration-500
                open:bg-neutral-800 open:border-accent/50 open:shadow-2xl open:shadow-accent/5
                open:ring-1 open:ring-white/5
              "
            >
              <summary class="flex items-center justify-between cursor-pointer p-6 list-none [&::-webkit-details-marker]:hidden focus:outline-none focus:ring-2 focus:ring-accent focus:ring-opacity-50 rounded-2xl">
                <h3 class="font-semibold text-xl text-white pr-6 transition-colors group-hover:text-accent">
                  <%= item[:question] %>
                </h3>
                <div class="text-accent transition-transform duration-300 group-open:rotate-180 flex-shrink-0">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
                  </svg>
                </div>
              </summary>
              <div
                class=" py-4 px-6 pb-6 text-neutral-300 leading-relaxed animate-fade-in-down"
              >
                <div>
                  <p><%= item[:answer].html_safe %></p>
                </div>
              </div>
            </details>
          <% end %>
        </div>
      </div>
    </section>
  <% end %>

  <%# --- JSON-LD Schema --- %>
  <script type="application/ld+json">
    <%= faq_schema_json.html_safe %>
  </script>


  <%# --- CTA Section --- %>
  <section class="py-20">
    <div class="container mx-auto px-6">
      <div
        class="
          bg-gradient-to-r from-accent to-secondary rounded-3xl p-12 md:p-20
          text-center shadow-2xl relative overflow-hidden
        "
      >
        <h2 class="text-4xl md:text-6xl font-black text-black mb-8 relative z-10">
          Ready to get started?
        </h2>

        <p
          class="
            text-xl text-black/80 max-w-2xl mx-auto mb-10 font-medium
            relative z-10
          "
        >
          Transform your landscape design ideas into reality with Hadaa's
          AI-powered platform
        </p>

        <%= link_to "Start Your Project", new_user_registration_url, class: "inline-block px-10 py-5 bg-black text-white text-xl font-bold rounded-full hover:bg-neutral-900 transition-all duration-300 transform hover:scale-105 shadow-xl relative z-10" %>

        <p class="mt-6 text-black/60 text-sm font-semibold relative z-10">
          Secure Payment â€¢ Instant access
        </p>
      </div>
    </div>
  </section>
</div>
