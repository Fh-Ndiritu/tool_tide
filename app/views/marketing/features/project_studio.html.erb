<% content_for :title, "AI Backyard Design Studio | Hadaa Landscape Planner" %>
<% content_for :description, "Design your dream backyard in minutes with Hadaa’s AI landscape studio. Upload a photo, edit with a brush, choose a style, and generate a realistic garden plan instantly." %>

<%# --- Schema (FAQ + SoftwareApp + Breadcrumbs) --- %>
<% content_for :head do %>
  <script type="application/ld+json">
    [
      {
        "@context": "https://schema.org",
        "@type": "FAQPage",
        "mainEntity": [
          {
            "@type": "Question",
            "name": "Do I need design experience?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "None at all. If you can take a photo, you can design your yard using our AI tools."
            }
          },
          {
            "@type": "Question",
            "name": "Can I keep my existing trees?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "Yes! Use the precision masking tool to protect any elements you want to keep while redesigning the rest."
            }
          },
          {
            "@type": "Question",
            "name": "Can I redesign a small backyard?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "Yes. Hadaa helps homeowners maximize small spaces with patios, plants, seating areas, and layout ideas."
            }
          }
        ]
      },
      {
        "@context": "https://schema.org",
        "@type": "SoftwareApplication",
        "name": "Hadaa Project Studio",
        "applicationCategory": "DesignApplication",
        "operatingSystem": "Web",
        "offers": {
          "@type": "Offer",
          "price": "10",
          "priceCurrency": "USD"
        }
      },
      {
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        "itemListElement": [
          {
            "@type": "ListItem",
            "position": 1,
            "name": "Home",
            "item": "https://hadaa.pro/"
          },
          {
            "@type": "ListItem",
            "position": 2,
            "name": "Project Studio",
            "item": "https://hadaa.pro/features/project-studio"
          }
        ]
      }
    ]
  </script>
<% end %>

<div class="bg-neutral-900 text-white min-h-screen font-sans selection:bg-accent selection:text-black">

  <%# --- Hero Section --- %>
  <section class="relative py-20 lg:py-32 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-black/80 via-neutral-900/90 to-neutral-900 z-0"></div>
    <div class="absolute inset-0 bg-cover bg-center opacity-30" style="background-image: url('<%= asset_path("features/project_studio_hero.png") %>')"></div>

    <div class="container mx-auto px-6 relative z-10 text-center">
      <span class="inline-block py-1 px-3 rounded-full bg-accent/10 border border-accent/30 text-accent text-sm font-bold tracking-wider mb-6 animate-fade-in-up">
        PROJECT STUDIO
      </span>

      <h1 class="text-5xl md:text-7xl font-extrabold tracking-tight mb-6 leading-tight animate-fade-in-up delay-100">
        AI Backyard & <br class="hidden md:block" />
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-accent to-secondary">
          Garden Design Studio
        </span>
      </h1>

      <p class="text-lg text-neutral-400 font-medium mb-8 animate-fade-in-up delay-150">
        Edit and redesign your yard instantly.
      </p>

      <p class="text-xl md:text-2xl text-neutral-300 max-w-4xl mx-auto leading-relaxed mb-8 animate-fade-in-up delay-200 font-light">
        Design your dream yard in minutes. No complex 3D modeling—just upload a photo, describe your vision, and see it instantly.
      </p>

      <p class="text-neutral-400 text-sm mb-10 animate-fade-in-up delay-250 italic">
        "Used by 10,000+ homeowners to design their dream yards in under 10 minutes."
      </p>

      <div class="flex flex-col sm:flex-row justify-center gap-4 animate-fade-in-up delay-300">
        <%= link_to "Start Designing Now", new_user_registration_url, class: "px-8 py-4 bg-accent text-black font-bold rounded-full hover:bg-white hover:text-black transition-all duration-300 transform hover:scale-105 shadow-[0_0_20px_rgba(34,211,238,0.4)]" %>
      </div>
    </div>
  </section>

  <%# --- Section 1: The Workflow (Hub) --- %>
  <section class="py-16 bg-neutral-900 border-b border-white/5">
    <div class="container mx-auto px-6 max-w-6xl">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">From Photo to Plan in 5 Seconds</h2>
        <p class="text-neutral-400 max-w-2xl mx-auto">The complete workflow to transform your outdoor space.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-5 gap-6 relative z-10">
        <%# Steps %>
        <% [
          { num: 1, title: "Upload", desc: "Snap a photo of your messy backyard." },
          { num: 2, title: "Edit", desc: "Use the Brush to erase sheds or add pools." },
          { num: 3, title: "Style", desc: "Cycle through presets like Modern or Cottage." },
          { num: 4, title: "Plan", desc: "Generate a buildable layout." },
          { num: 5, title: "Plant", desc: "Choose climate-safe plants." }
        ].each do |step| %>
          <div class="bg-neutral-800/30 p-6 rounded-2xl border border-white/5 text-center group hover:-translate-y-2 transition-transform duration-300">
            <div class="w-10 h-10 rounded-full bg-white/10 text-white flex items-center justify-center font-bold mx-auto mb-4 group-hover:bg-accent group-hover:text-black transition-colors">
              <%= step[:num] %>
            </div>
            <h3 class="font-bold text-white mb-2"><%= step[:title] %></h3>
            <p class="text-sm text-neutral-400"><%= step[:desc] %></p>
          </div>
        <% end %>
      </div>
    </div>
  </section>

  <%# --- Section 2: Brush Feature --- %>
  <section class="py-20 bg-neutral-800/30 relative overflow-hidden">
    <div class="container mx-auto px-6">
      <div class="flex flex-col lg:flex-row items-center gap-16">
        <%# Content %>
        <div class="w-full lg:w-1/2">
          <div class="flex items-center gap-4 mb-6">
            <div class="w-12 h-12 rounded-2xl bg-accent flex items-center justify-center text-black font-bold text-xl shadow-lg shadow-accent/20">
              <%= render IconComponent.new(name: "sparkles", classes: "w-6 h-6") %>
            </div>
            <h2 class="text-3xl md:text-4xl font-bold text-white">Don't like that bush? Erase it.</h2>
          </div>

          <p class="text-lg text-neutral-300 mb-8 leading-relaxed">
            Creating the perfect yard isn't about starting from scratch; it's about refining what you have. Use our <strong>Precision Brush Tool</strong> to:
          </p>

          <ul class="space-y-4">
             <li class="flex items-start gap-3">
              <%= render IconComponent.new(name: "check", classes: "w-6 h-6 text-accent mt-0.5") %>
              <div>
                <strong class="text-white block">Remove unwanted elements</strong>
                <span class="text-neutral-400">Delete an old shed, a dying tree, or messy shrubs instantly.</span>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <%= render IconComponent.new(name: "check", classes: "w-6 h-6 text-accent mt-0.5") %>
              <div>
                <strong class="text-white block">Add new features</strong>
                <span class="text-neutral-400">Brush over an area and type "add a fire pit" or "install a pergola."</span>
              </div>
            </li>
             <li class="flex items-start gap-3">
              <%= render IconComponent.new(name: "check", classes: "w-6 h-6 text-accent mt-0.5") %>
              <div>
                <strong class="text-white block">Keep what you love</strong>
                <span class="text-neutral-400">Protect your favorite oak tree while redesigning everything around it.</span>
              </div>
            </li>
          </ul>
        </div>

        <%# Visual %>
        <div class="w-full lg:w-1/2">
          <div class="relative rounded-3xl overflow-hidden border border-white/10 shadow-2xl group">
             <%= image_tag "features/brush_tool_interface.png", alt: "AI landscape design editing brush", class: "w-full h-auto transform group-hover:scale-105 transition-transform duration-700" %>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%# --- Section 3: Presets Feature --- %>
  <section class="py-20 lg:py-32 bg-neutral-900 border-t border-white/5">
    <div class="container mx-auto px-6">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Find Your Aesthetic Instantly</h2>
        <p class="text-lg text-neutral-400">
          Not sure what you want? Cycle through professional design styles with a single click.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <% [
          { name: "Modern Minimalist", desc: "Clean lines, concrete pavers, and architectural grasses.", img: "features/style_modern.png" },
          { name: "Tropical Oasis", desc: "Lush ferns, palms, and vibrant colors.", img: "features/style_zen.png" },
          { name: "Desert Xeriscape", desc: "Low-water succulents, gravel, and natural stone.", img: "features/style_desert.png" },
          { name: "English Cottage", desc: "Wildflowers, winding paths, and rustic charm.", img: "features/style_cottage.png" }
        ].each do |style| %>
          <div class="group bg-neutral-800/30 rounded-2xl overflow-hidden border border-white/5 hover:border-accent/30 transition-all duration-300">
            <div class="h-48 overflow-hidden">
               <%= image_tag style[:img], class: "w-full h-full object-cover group-hover:scale-110 transition-transform duration-500", alt: "#{style[:name]} garden design" %>
            </div>
            <div class="p-6">
              <h3 class="font-bold text-white mb-2"><%= style[:name] %></h3>
              <p class="text-sm text-neutral-400"><%= style[:desc] %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>

  <%# --- Section 4: Prompt Feature --- %>
  <section class="py-20 bg-neutral-800/30 relative overflow-hidden">
    <div class="container mx-auto px-6">
      <div class="flex flex-col lg:flex-row-reverse items-center gap-16">
        <div class="w-full lg:w-1/2">
          <div class="flex items-center gap-4 mb-6">
            <div class="w-12 h-12 rounded-2xl bg-secondary flex items-center justify-center text-white font-bold text-xl shadow-lg shadow-secondary/20">
              <%= render IconComponent.new(name: "sparkles", classes: "w-6 h-6") %>
            </div>
            <h2 class="text-3xl md:text-4xl font-bold text-white">If you can say it, you can see it.</h2>
          </div>

          <div class="bg-black/40 p-6 rounded-2xl border border-white/10 mb-8 backdrop-blur-sm">
            <p class="text-xl text-neutral-300 font-mono">
              "A cozy reading nook with a hammock and string lights."
            </p>
          </div>

           <div class="bg-black/40 p-6 rounded-2xl border border-white/10 mb-8 backdrop-blur-sm">
            <p class="text-xl text-neutral-300 font-mono">
              "A modern pool deck with limestone pavers and privacy hedges."
            </p>
          </div>

          <p class="text-lg text-neutral-300 leading-relaxed">
            Our <strong>AI Landscape Design Tool</strong> understands natural language, turning your text descriptions into photorealistic designs. No CAD skills required.
          </p>
        </div>

        <div class="w-full lg:w-1/2">
           <div class="relative rounded-3xl overflow-hidden border border-white/10 shadow-2xl group">
             <%= image_tag "features/seasonal_design_editor.png", alt: "Text to design AI landscape editor", class: "w-full h-auto transform group-hover:scale-105 transition-transform duration-700" %>
          </div>
        </div>
      </div>
    </div>
  </section>

   <%# --- Internal Links / Next Steps --- %>
   <section class="py-20 bg-neutral-900 border-t border-white/5">
    <div class="container mx-auto px-6">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-white mb-4">What's Next?</h2>
        <p class="text-neutral-400">Continue your design journey.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <%= link_to features_sketch_to_3d_path, class: "group block bg-neutral-800/50 p-8 rounded-3xl border border-white/5 hover:border-accent/50 transition-all duration-300 hover:-translate-y-1" do %>
          <div class="mb-4 text-accent group-hover:scale-110 transition-transform origin-left">
            <%= render IconComponent.new(name: "eye", classes: "w-8 h-8") %>
          </div>
          <h3 class="text-xl font-bold text-white mb-2 group-hover:text-accent transition-colors">Visualize in 3D &rarr;</h3>
          <p class="text-sm text-neutral-400">Turn your 2D design into a 3D walkthrough.</p>
        <% end %>

        <%= link_to features_biological_engine_path, class: "group block bg-neutral-800/50 p-8 rounded-3xl border border-white/5 hover:border-accent/50 transition-all duration-300 hover:-translate-y-1" do %>
           <div class="mb-4 text-green-400 group-hover:scale-110 transition-transform origin-left">
            <%= render IconComponent.new(name: "map_pin", classes: "w-8 h-8") %>
          </div>
          <h3 class="text-xl font-bold text-white mb-2 group-hover:text-green-400 transition-colors">Check Survival &rarr;</h3>
          <p class="text-sm text-neutral-400">Will these plants grow in my zip code?</p>
        <% end %>

        <%= link_to features_planting_guide_path, class: "group block bg-neutral-800/50 p-8 rounded-3xl border border-white/5 hover:border-accent/50 transition-all duration-300 hover:-translate-y-1" do %>
           <div class="mb-4 text-secondary group-hover:scale-110 transition-transform origin-left">
            <%= render IconComponent.new(name: "list", classes: "w-8 h-8") %>
          </div>
          <h3 class="text-xl font-bold text-white mb-2 group-hover:text-secondary transition-colors">Build It &rarr;</h3>
          <p class="text-sm text-neutral-400">Get the material planting list & shopping guide.</p>
        <% end %>
      </div>
    </div>
   </section>

  <%# --- FAQ Section --- %>
  <section class="py-20 bg-neutral-900 border-t border-white/5">
    <div class="container mx-auto px-6 max-w-4xl">
      <h2 class="text-3xl font-bold text-white mb-12 text-center">Frequently Asked Questions</h2>

      <div class="space-y-6">
        <div class="bg-neutral-800/30 rounded-2xl p-6 border border-white/5">
          <h3 class="text-lg font-bold text-white mb-2">Do I need design experience?</h3>
          <p class="text-neutral-400">None at all. If you can take a photo, you can design your yard using our AI tools.</p>
        </div>

         <div class="bg-neutral-800/30 rounded-2xl p-6 border border-white/5">
          <h3 class="text-lg font-bold text-white mb-2">Can I keep my existing trees?</h3>
          <p class="text-neutral-400">Yes! Use the precision masking tool to protect any elements you want to keep while redesigning the rest.</p>
        </div>
      </div>
    </div>
  </section>

</div>
