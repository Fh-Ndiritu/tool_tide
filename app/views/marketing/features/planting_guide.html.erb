<% content_for :title, "Backyard Planting Plan & Shopping List Generator | Hadaa" %>
<% content_for :description, "From 'Nice Picture' to 'Home Depot Run.' Get a personalized planting plan, plant quantities, and a landscaping shopping list to build your backyard design." %>

<%# --- Schema (FAQ + SoftwareApp + Breadcrumbs) --- %>
<% content_for :head do %>
  <script type="application/ld+json">
    [
      {
        "@context": "https://schema.org",
        "@type": "FAQPage",
        "mainEntity": [
          {
            "@type": "Question",
            "name": "Is this a Bill of Quantities (BOQ)?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "It's a simplified version designed for homeowners. It gives you the confidence to talk to contractors or DIY your shopping run."
            }
          },
          {
            "@type": "Question",
            "name": "Can I take this to a nursery?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "Yes, the list includes specific species names so you come home with the right plants."
            }
          },
          {
            "@type": "Question",
            "name": "Can I estimate how much my landscaping project will cost?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "Yes. Hadaa provides material quantities and rough cost guidance so homeowners can budget before shopping."
            }
          }
        ]
      },
      {
        "@context": "https://schema.org",
        "@type": "SoftwareApplication",
        "name": "Hadaa Planting Guide",
        "applicationCategory": "DesignApplication",
        "operatingSystem": "Web",
        "offers": {
          "@type": "Offer",
          "price": "10",
          "priceCurrency": "USD"
        }
      },
      {
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        "itemListElement": [
          {
            "@type": "ListItem",
            "position": 1,
            "name": "Home",
            "item": "https://hadaa.pro/"
          },
          {
            "@type": "ListItem",
            "position": 2,
            "name": "Planting Guide",
            "item": "https://hadaa.pro/features/planting-guide"
          }
        ]
      }
    ]
  </script>
<% end %>

<div class="bg-neutral-900 text-white min-h-screen font-sans selection:bg-accent selection:text-black">

  <%# --- Hero Section --- %>
