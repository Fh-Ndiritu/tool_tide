<% content_for :title, "Best Plants for Your Backyard Climate Zone | Hadaa AI" %>
<% content_for :description, "Beauty is useless if it dies. Hadaa recommends backyard landscaping plants that thrive in your USDA zone, soil, sunlight, and local climate." %>

<%# --- Schema (FAQ + SoftwareApp + Breadcrumbs) --- %>
<% content_for :head do %>
  <script type="application/ld+json">
    [
      {
        "@context": "https://schema.org",
        "@type": "FAQPage",
        "mainEntity": [
          {
            "@type": "Question",
            "name": "Will these plants survive in my city?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "Yes. We filter every recommendation through local climate data, checking your USDA hardiness zone, average rainfall, and temperature extremes."
            }
          },
          {
            "@type": "Question",
            "name": "Do you support native plants?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "Yes! We prioritize native species to reduce water usage, lower maintenance costs, and support local pollinators."
            }
          },
          {
            "@type": "Question",
            "name": "What is my USDA hardiness zone?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "Hadaa estimates your hardiness zone based on your selected region or ZIP code to recommend plants that thrive locally."
            }
          },
          {
            "@type": "Question",
            "name": "Can you recommend low-maintenance backyard plants?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "Yes. We prioritize drought-tolerant, native, and low-maintenance plants that are easy for homeowners to care for."
            }
          }
        ]
      },
      {
        "@context": "https://schema.org",
        "@type": "SoftwareApplication",
        "name": "Hadaa Biological Engine",
        "applicationCategory": "DesignApplication",
        "operatingSystem": "Web",
        "offers": {
          "@type": "Offer",
          "price": "10",
          "priceCurrency": "USD"
        }
      },
      {
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        "itemListElement": [
          {
            "@type": "ListItem",
            "position": 1,
            "name": "Home",
            "item": "https://hadaa.pro/"
          },
          {
            "@type": "ListItem",
            "position": 2,
            "name": "Choose Plants",
            "item": "https://hadaa.pro/features/biological-engine"
          }
        ]
      }
    ]
  </script>
<% end %>

<div class="bg-neutral-900 text-white min-h-screen font-sans selection:bg-accent selection:text-black">

  <%# --- Hero Section --- %>
  <section class="relative py-20 lg:py-32 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-black/80 via-neutral-900/90 to-neutral-900 z-0"></div>
    <div class="absolute inset-0 bg-cover bg-center opacity-20" style="background-image: url('<%= asset_path("features/preset_styles_bg.png") %>')"></div>

    <div class="container mx-auto px-6 relative z-10 text-center">
      <span class="inline-block py-1 px-3 rounded-full bg-green-500/10 border border-green-500/30 text-green-400 text-sm font-bold tracking-wider mb-6 animate-fade-in-up">
        BIOLOGICAL ENGINE
      </span>

      <h1 class="text-5xl md:text-7xl font-extrabold tracking-tight mb-6 leading-tight animate-fade-in-up delay-100">
        AI Plant Recommendations <br class="hidden md:block" />
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-green-400 to-emerald-600">
          For Your Climate
        </span>
      </h1>

      <p class="text-lg text-neutral-400 font-medium mb-8 animate-fade-in-up delay-150">
        Choose plants guaranteed to thrive locally.
      </p>

      <p class="text-xl md:text-2xl text-neutral-300 max-w-4xl mx-auto leading-relaxed mb-12 animate-fade-in-up delay-200 font-light">
        Beauty is useless if it dies. Our biological engine ensures every plant we suggest thrives in your specific USDA Hardiness Zone.
      </p>

      <div class="flex flex-col sm:flex-row justify-center gap-4 animate-fade-in-up delay-300">
        <%= link_to "Find My Plants", new_user_registration_url, class: "px-8 py-4 bg-green-500 text-black font-bold rounded-full hover:bg-white hover:text-black transition-all duration-300 transform hover:scale-105 shadow-[0_0_20px_rgba(34,197,94,0.4)]" %>
      </div>
    </div>
  </section>

  <%# --- Section 1: Science vs Hallucination --- %>
  <section class="py-16 bg-neutral-900 border-b border-white/5">
    <div class="container mx-auto px-6 max-w-6xl">
      <div class="flex flex-col lg:flex-row items-center gap-12">
        <div class="w-full lg:w-1/2">
           <div class="flex items-center gap-4 mb-6">
            <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center text-white">
              <%= render IconComponent.new(name: "leaf", classes: "w-5 h-5") %>
            </div>
            <h2 class="text-3xl font-bold text-white">Gardening Without the Guesswork</h2>
          </div>
          <p class="text-lg text-neutral-300 leading-relaxed mb-6">
            Most AI tools hallucinate tropical palms in Alaska. We use science. Hadaa references your geolocation against:
          </p>
          <div class="grid grid-cols-1 gap-4">
             <div class="bg-neutral-800/30 p-4 rounded-xl border border-white/5">
               <strong class="text-green-400 block mb-1">USDA Hardiness Zones</strong>
               <span class="text-neutral-400 text-sm">Ensuring cold/heat tolerance for year-round survival.</span>
             </div>
             <div class="bg-neutral-800/30 p-4 rounded-xl border border-white/5">
               <strong class="text-blue-400 block mb-1">Water Requirements</strong>
               <span class="text-neutral-400 text-sm">Finding drought-tolerant landscaping ideas that save you money.</span>
             </div>
             <div class="bg-neutral-800/30 p-4 rounded-xl border border-white/5">
               <strong class="text-yellow-400 block mb-1">Sunlight Needs</strong>
               <span class="text-neutral-400 text-sm">Matching plants to your yard's specific lighting conditions.</span>
             </div>
          </div>
        </div>

        <div class="w-full lg:w-1/2">
           <div class="relative rounded-2xl overflow-hidden border border-white/10 shadow-xl">
              <%# Placeholder for plant logic visual - re-using brush tool interface as abstract representation or using a generic plant image if available %>
               <%= image_tag "features/style_zen.png", alt: "AI plant selection engine", class: "w-full h-auto grayscale opacity-50 mix-blend-luminosity" %>
               <div class="absolute inset-0 flex items-center justify-center">
                 <div class="bg-black/80 backdrop-blur-md p-6 rounded-2xl border border-green-500/30 text-center">
                   <div class="text-green-400 text-4xl font-bold mb-2">98%</div>
                   <div class="text-white font-medium">Survival Rate Prediction</div>
                 </div>
               </div>
           </div>
        </div>
      </div>
    </div>
  </section>

  <%# --- Section 2: Regional Examples --- %>
  <section class="py-20 bg-neutral-800/30">
    <div class="container mx-auto px-6 max-w-6xl">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-white mb-4">Tailored to Your Ecosystem</h2>
        <p class="text-neutral-400">Discover the best plants for your area.</p>
      </div>

       <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          <div class="bg-neutral-900 p-6 rounded-2xl border border-white/5 hover:border-green-500/30 transition-colors">
            <h3 class="text-lg font-bold text-white mb-2">Florida (Zone 9-11)</h3>
            <p class="text-sm text-neutral-400">Thriving palms, Hibiscus, and salt-tolerant shrubs.</p>
          </div>
          <div class="bg-neutral-900 p-6 rounded-2xl border border-white/5 hover:border-yellow-500/30 transition-colors">
            <h3 class="text-lg font-bold text-white mb-2">Arizona (Zone 9)</h3>
            <p class="text-sm text-neutral-400">Agave, Aloe, and gravel xeriscaping for low water usage.</p>
          </div>
          <div class="bg-neutral-900 p-6 rounded-2xl border border-white/5 hover:border-blue-500/30 transition-colors">
            <h3 class="text-lg font-bold text-white mb-2">Pacific NW (Zone 8)</h3>
            <p class="text-sm text-neutral-400">Lush ferns, shade perennials, and moss-friendly groundcovers.</p>
          </div>
          <div class="bg-neutral-900 p-6 rounded-2xl border border-white/5 hover:border-purple-500/30 transition-colors">
            <h3 class="text-lg font-bold text-white mb-2">Northeast (Zone 5-7)</h3>
            <p class="text-sm text-neutral-400">Cold-hardy hydrangeas, lilacs, and native maples.</p>
          </div>
       </div>
    </div>
  </section>

  <%# --- Internal Link Hook --- %>
  <section class="py-20 bg-neutral-900 border-t border-white/5">
     <div class="container mx-auto px-6 text-center">
       <p class="text-neutral-400 mb-4">Found your plants?</p>
       <%= link_to "Build Your Shopping List", features_planting_guide_path, class: "text-2xl font-bold text-white hover:text-green-400 transition-colors" %>
     </div>
  </section>

   <%# --- FAQ Section --- %>
  <section class="py-20 bg-neutral-900 border-t border-white/5">
    <div class="container mx-auto px-6 max-w-4xl">
      <h2 class="text-3xl font-bold text-white mb-12 text-center">Frequently Asked Questions</h2>

      <div class="space-y-6">
        <div class="bg-neutral-800/30 rounded-2xl p-6 border border-white/5">
          <h3 class="text-lg font-bold text-white mb-2">Will these plants survive in my city?</h3>
          <p class="text-neutral-400">Yes. We filter every recommendation through local climate data.</p>
        </div>

         <div class="bg-neutral-800/30 rounded-2xl p-6 border border-white/5">
          <h3 class="text-lg font-bold text-white mb-2">Do you support native plants?</h3>
          <p class="text-neutral-400">Yes! We prioritize native species to reduce water usage and support local pollinators.</p>
        </div>
      </div>
    </div>
  </section>

</div>
