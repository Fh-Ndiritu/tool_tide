<div class="mb-6 flex justify-between items-center">
  <%= link_to "â† Back to Dashboard", agora_dashboard_index_path, class: "text-indigo-400 hover:text-white text-sm font-medium" %>
  <div class="text-xs text-gray-500">
    Last updated: <%= time_ago_in_words(@post.updated_at) %> ago
  </div>
</div>

<%# Version Navigation Bar %>
<% root_post = @post.root %>
<% all_versions = [root_post] + root_post.descendants.order(:revision_number) %>
<% if all_versions.size > 1 %>
  <div class="mb-6 bg-gray-900/50 border border-gray-800 rounded-lg p-3">
    <div class="flex items-center justify-between mb-2">
      <span class="text-xs text-gray-500 uppercase tracking-wider font-bold">Version History</span>
      <span class="text-[10px] text-gray-600"><%= all_versions.size %> versions</span>
    </div>
    <div class="flex flex-wrap gap-2">
      <% all_versions.each do |version| %>
        <% is_current = version.id == @post.id %>
        <%= link_to agora_post_path(version), class: "inline-flex items-center px-3 py-1.5 rounded-lg text-xs font-mono transition-all duration-200 #{is_current ? 'bg-indigo-600 text-white ring-2 ring-indigo-400/50' : 'bg-gray-800 text-gray-400 hover:bg-gray-700 hover:text-white border border-gray-700'}" do %>
          <span>v<%= version.revision_number %></span>
          <span class="ml-2 px-1.5 py-0.5 rounded text-[10px] font-bold uppercase
            <%= case version.status
                when 'accepted' then 'bg-emerald-900/50 text-emerald-400'
                when 'rejected' then 'bg-red-900/50 text-red-400'
                when 'published' then 'bg-gray-700 text-gray-300'
                when 'needs_revision' then 'bg-amber-900/50 text-amber-400'
                else 'bg-gray-700 text-gray-400'
                end %>">
            <%= version.status.split('_').first[0..2] %>
          </span>
          <span class="ml-1.5 <%= version.net_score > 0 ? 'text-green-400' : version.net_score < 0 ? 'text-red-400' : 'text-gray-500' %>">
            <%= version.net_score > 0 ? '+' : '' %><%= version.net_score %>
          </span>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>

<!-- Main Post Card -->
<!-- Main Layout Grid -->
<div class="grid grid-cols-1 lg:grid-cols-12 gap-8">

  <!-- Left Column: Main Content (Pitch Body & Threads) -->
  <div class="lg:col-span-8 space-y-12">

    <!-- Pitch Content Card -->
    <div class="bg-gray-900 border border-gray-800 rounded-xl shadow-2xl overflow-hidden">
      <!-- Header -->
      <div class="p-8 border-b border-gray-800 bg-gradient-to-r from-gray-900 to-gray-800/50">
        <div class="flex items-start justify-between mb-6">
           <% author_config = AGORA_MODELS.find { |m| m[:user_name] == @post.author_agent_id } || { color: "bg-gray-600", avatar: "user" } %>
           <div class="flex items-center space-x-4">
             <div class="h-14 w-14 rounded-full flex items-center justify-center text-3xl shadow-lg ring-2 ring-gray-700/50 <%= author_config[:color] %> bg-opacity-20 backdrop-blur-sm border border-white/10">
               <%= author_config[:emoji] %>
             </div>
             <div>
               <h1 class="text-3xl font-bold text-white leading-tight mb-1"><%= @post.title %></h1>
               <div class="flex items-center space-x-3 text-sm">
                 <span class="text-gray-400">by <span class="text-gray-200 font-medium"><%= @post.author_agent_id %></span></span>
                 <span class="text-gray-600">â€¢</span>
                 <span class="text-gray-500"><%= time_ago_in_words(@post.created_at) %> ago</span>
               </div>
             </div>
           </div>

           <div class="flex flex-col items-end">
             <span class="px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wide <%= @post.status == 'published' ? 'bg-green-900/30 text-green-400 border border-green-800' : 'bg-gray-800 text-gray-400 border border-gray-700' %>">
               <%= @post.status %>
             </span>
             <span class="text-xs text-gray-600 mt-2 font-mono">Rev. <%= @post.revision_number %></span>
           </div>
        </div>
      </div>

      <!-- Markdown Body -->
      <div class="p-8 bg-gray-900">
        <div class="max-w-none">
          <%= markdown(@post.body) %>
        </div>
      </div>
    </div>

    <!-- Argument Logic Tree (Threads) -->
    <div id="argument-map" class="mt-12">
      <h2 class="text-2xl font-bold text-white mb-6 flex items-center">
        <svg class="w-6 h-6 mr-3 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"></path></svg>
        Deliberation & Feedback
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Critiques -->
        <div class="space-y-4">
          <div class="flex items-center justify-between border-b border-red-900/30 pb-2 mb-2">
             <h3 class="text-red-400 font-bold uppercase tracking-widest text-xs">Critiques</h3>
             <span class="bg-red-900/20 text-red-400 px-2 py-0.5 rounded text-xs font-mono"><%= @post.comments.where(comment_type: 'critique').count %></span>
          </div>
          <% @post.comments.where(comment_type: 'critique').each do |comment| %>
            <%= render partial: "agora/posts/comment_node", locals: { comment: comment, color_class: "border-l-4 border-red-500/50 bg-gray-800/50 hover:bg-gray-800" } %>
          <% end %>
        </div>

        <!-- Strategies -->
        <div class="space-y-4">
          <div class="flex items-center justify-between border-b border-emerald-900/30 pb-2 mb-2">
             <h3 class="text-emerald-400 font-bold uppercase tracking-widest text-xs">Strategies</h3>
             <span class="bg-emerald-900/20 text-emerald-400 px-2 py-0.5 rounded text-xs font-mono"><%= @post.comments.where(comment_type: ['strategy', 'general']).count %></span>
          </div>
          <% @post.comments.where(comment_type: ['strategy', 'general']).each do |comment| %>
            <%= render partial: "agora/posts/comment_node", locals: { comment: comment, color_class: "border-l-4 border-emerald-500/50 bg-gray-800/50 hover:bg-gray-800" } %>
          <% end %>
        </div>
      </div>
    </div>

  </div>

  <!-- Right Column: Sidebar (Sticky) -->
  <div class="lg:col-span-4 space-y-6">
    <div class="sticky top-6">
      <!-- Stats Card -->
      <div class="bg-gray-800/50 border border-gray-700/50 rounded-xl p-6 backdrop-blur-sm">
        <h3 class="text-gray-400 text-xs font-bold uppercase tracking-wider mb-4">Consensus Metrics</h3>

        <div class="grid grid-cols-2 gap-4 mb-6">
          <div class="p-4 bg-gray-900/50 rounded-lg text-center border border-gray-700/30">
             <span class="block text-3xl font-bold <%= @post.net_score > 0 ? 'text-green-400' : 'text-red-400' %>">
               <%= @post.net_score > 0 ? "+" : "" %><%= @post.net_score %>
             </span>
             <span class="text-xs text-gray-500 uppercase">Net Score</span>
          </div>
          <div class="p-4 bg-gray-900/50 rounded-lg text-center border border-gray-700/30">
             <span class="block text-3xl font-bold text-white"><%= @post.votes.count %></span>
             <span class="text-xs text-gray-500 uppercase">Total Votes</span>
          </div>
        </div>

        <!-- Action Buttons -->
        <% if @post.status == 'published' %>
          <div class="space-y-3">
            <button class="w-full bg-indigo-600 hover:bg-indigo-500 text-white py-3 rounded-lg font-bold shadow-lg shadow-indigo-900/20 transition-all transform hover:-translate-y-0.5 flex justify-center items-center">
              <span>Accept Proposal</span>
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path></svg>
            </button>
            <button class="w-full bg-gray-700 hover:bg-red-900/30 hover:text-red-300 text-gray-300 py-3 rounded-lg font-medium transition-colors border border-transparent hover:border-red-800/50">
              Reject / Archive
            </button>
          </div>
        <% elsif @post.status.in?(['accepted', 'proceeding']) %>
           <!-- Status Badge -->
           <div class="w-full py-3 bg-emerald-900/30 border border-emerald-700 rounded-lg text-center text-emerald-400 font-bold mb-4">
             <%= @post.status.titleize %> âœ“
           </div>

           <!-- Copy Content Card -->
           <% if @post.execution.present? %>
             <div class="bg-gray-800/50 border border-gray-700 rounded-lg p-4 mb-4">
               <h4 class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-3">ðŸ“‹ Final Content</h4>
               <%= link_to agora_execution_path(@post.execution), class: "w-full flex items-center justify-between bg-indigo-600 hover:bg-indigo-500 text-white py-2.5 px-4 rounded-lg font-medium transition-all text-sm" do %>
                 <span>View & Copy Content</span>
                 <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path></svg>
               <% end %>
             </div>

             <!-- Analytics Section -->
             <div class="bg-gray-800/50 border border-gray-700 rounded-lg p-4">
               <h4 class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-3">ðŸ“Š Performance Analytics</h4>

               <% if @post.execution.analytics_screenshot.attached? %>
                 <!-- Show Existing Analytics -->
                 <div class="space-y-3">
                   <div class="rounded-lg overflow-hidden border border-gray-600">
                     <%= image_tag @post.execution.analytics_screenshot, class: "w-full h-auto" %>
                   </div>
                   <% if @post.execution.metrics.present? %>
                     <div class="grid grid-cols-2 gap-2 text-xs">
                       <% { spend: @post.execution.spend, impressions: @post.execution.impressions, clicks: @post.execution.clicks, roas: @post.execution.roas }.compact.each do |key, value| %>
                         <div class="bg-gray-900/50 rounded p-2">
                           <span class="block text-gray-500 capitalize"><%= key.to_s.humanize %></span>
                           <span class="block text-white font-mono"><%= value %></span>
                         </div>
                       <% end %>
                     </div>
                   <% end %>
                   <details class="text-xs">
                     <summary class="text-gray-500 cursor-pointer hover:text-indigo-400">Replace Screenshot</summary>
                     <div class="mt-2">
                       <%= form_with url: upload_analytics_agora_execution_path(@post.execution), method: :post, multipart: true, local: true, class: "space-y-2" do %>
                         <%= file_field_tag :analytics_screenshot, accept: "image/*", class: "w-full text-xs text-gray-400 file:mr-2 file:py-1 file:px-3 file:rounded file:border-0 file:text-xs file:bg-gray-700 file:text-gray-300 hover:file:bg-gray-600" %>
                         <%= submit_tag "Upload", class: "w-full py-2 bg-purple-600 hover:bg-purple-500 text-white rounded-lg font-medium text-xs cursor-pointer transition-colors" %>
                       <% end %>
                     </div>
                   </details>
                 </div>
               <% else %>
                 <!-- Upload Form -->
                 <%= form_with url: upload_analytics_agora_execution_path(@post.execution), method: :post, multipart: true, local: true, class: "space-y-3" do %>
                   <p class="text-xs text-gray-500 mb-2">Upload a screenshot of your ad analytics to track performance.</p>
                   <%= file_field_tag :analytics_screenshot, accept: "image/*", class: "w-full text-xs text-gray-400 file:mr-2 file:py-1.5 file:px-4 file:rounded file:border-0 file:text-xs file:bg-gray-700 file:text-gray-300 hover:file:bg-gray-600" %>
                   <%= submit_tag "ðŸ“¤ Upload Analytics", class: "w-full py-2.5 bg-purple-600 hover:bg-purple-500 text-white rounded-lg font-medium text-sm cursor-pointer transition-colors" %>
                 <% end %>
               <% end %>
             </div>
           <% else %>
             <div class="w-full py-3 bg-gray-800/50 border border-gray-700 rounded-lg text-center text-gray-500 text-sm">
               Awaiting Content Generation...
             </div>
           <% end %>
        <% else %>
           <div class="w-full py-3 bg-gray-800/50 border border-gray-700 rounded-lg text-center text-gray-500 cursor-not-allowed">
             <%= @post.status.titleize %>
           </div>
        <% end %>
      </div>

      <!-- Revision History Mini -->
      <div class="mt-6">
         <h3 class="text-gray-500 text-xs font-bold uppercase tracking-wider mb-3">Version History</h3>
         <div class="bg-gray-900/30 rounded-lg border border-gray-800 p-1">
            <!-- This could be the slider component or a list -->
            <div class="p-2">
              <span class="block text-xs text-gray-400 mb-1">Current Version</span>
              <div class="flex items-center justify-between text-sm">
                <span class="text-white font-mono">v<%= @post.revision_number %></span>
                <span class="text-gray-600"><%= time_ago_in_words(@post.updated_at) %> ago</span>
              </div>
            </div>
         </div>
      </div>

    </div>
  </div>

</div>
