<div class="max-w-4xl mx-auto py-8">
  <div class="mb-6 flex justify-between items-center">
    <h1 class="text-3xl font-bold text-white flex items-center">
      <%= link_to agora_executions_path, class: "text-gray-500 hover:text-white mr-4" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
      <% end %>
      Execution #<%= @execution.id %>
    </h1>
    <span class="px-3 py-1 bg-purple-900/50 text-purple-300 rounded-full border border-purple-500/30 text-sm font-mono">
      <%= @execution.platform %> Strategy
    </span>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- LEFT COLUMN: CREATIVE ASSETS -->
    <div class="space-y-6">
      <!-- IMAGE SECTION -->
      <div class="bg-gray-900 border border-gray-800 rounded-xl overflow-hidden shadow-2xl">
        <div class="p-4 border-b border-gray-800 bg-gray-800/50 flex justify-between items-center">
          <h3 class="text-lg font-bold text-white">ğŸ¨ Visual Asset</h3>
          <% if @execution.image.attached? %>
            <%= link_to rails_blob_path(@execution.image, disposition: "attachment"), class: "text-xs bg-gray-700 hover:bg-gray-600 px-3 py-1 rounded text-white transition-colors" do %>
              â¬‡ï¸ Download
            <% end %>
          <% end %>
        </div>

        <div class="relative bg-black min-h-[300px] flex items-center justify-center p-4" id="<%= dom_id(@execution, :image_generation) %>">
          <%= render partial: "agora/executions/generating_state", locals: { execution: @execution } %>
        </div>
      </div>

      <!-- VIDEO PROMPT -->
      <div class="bg-gray-900 border border-gray-800 rounded-xl overflow-hidden">
        <div class="p-3 border-b border-gray-800 bg-gray-800/50 flex justify-between items-center">
          <h3 class="text-sm font-bold text-gray-300">ğŸ¥ Google Veo Prompt</h3>
          <button data-controller="asset-clipboard" data-action="click->asset-clipboard#copy" data-asset-clipboard-text-param="<%= @execution.video_prompt %>" class="text-xs text-purple-400 hover:text-purple-300">
            ğŸ“‹ Copy
          </button>
        </div>
        <div class="p-4 bg-gray-950">
          <code class="text-xs text-green-400 font-mono block whitespace-pre-wrap"><%= @execution.video_prompt.presence || "No video prompt generated." %></code>
        </div>
      </div>

      <!-- IMAGE PROMPT -->
      <div class="bg-gray-900 border border-gray-800 rounded-xl overflow-hidden">
        <div class="p-3 border-b border-gray-800 bg-gray-800/50 flex justify-between items-center">
          <h3 class="text-sm font-bold text-gray-300">ğŸ–¼ï¸ Nano Banana Link</h3>
          <button data-controller="asset-clipboard" data-action="click->asset-clipboard#copy" data-asset-clipboard-text-param="<%= @execution.image_prompt %>" class="text-xs text-purple-400 hover:text-purple-300">
            ğŸ“‹ Copy
          </button>
        </div>
        <div class="p-4 bg-gray-950">
          <code class="text-xs text-blue-400 font-mono block whitespace-pre-wrap"><%= @execution.image_prompt.presence || "No image prompt generated." %></code>
        </div>
      </div>
    </div>

    <!-- RIGHT COLUMN: COPY & STRATEGY -->
    <div class="space-y-6">

      <!-- PLATFORM TEXT -->
      <div class="bg-gray-900 border border-gray-800 rounded-xl overflow-hidden">
        <div class="p-4 border-b border-gray-800 bg-gray-800/50">
          <h3 class="text-lg font-bold text-white">ğŸ“ Platform Copy</h3>
        </div>

        <div class="divide-y divide-gray-800">
          <!-- TikTok -->
          <div class="p-4">
            <div class="flex justify-between items-center mb-2">
              <span class="text-xs font-bold text-pink-500 uppercase">TikTok</span>
              <button data-controller="asset-clipboard" data-action="click->asset-clipboard#copy" data-asset-clipboard-text-param="<%= @execution.tiktok_text %>" class="text-xs text-gray-500 hover:text-white">
                Copy
              </button>
            </div>
            <p class="text-sm text-gray-300 whitespace-pre-wrap"><%= @execution.tiktok_text.presence || "N/A" %></p>
          </div>

          <!-- Facebook -->
          <div class="p-4">
            <div class="flex justify-between items-center mb-2">
              <span class="text-xs font-bold text-blue-500 uppercase">Facebook</span>
              <button data-controller="asset-clipboard" data-action="click->asset-clipboard#copy" data-asset-clipboard-text-param="<%= @execution.facebook_text %>" class="text-xs text-gray-500 hover:text-white">
                Copy
              </button>
            </div>
            <p class="text-sm text-gray-300 whitespace-pre-wrap"><%= @execution.facebook_text.presence || "N/A" %></p>
          </div>

          <!-- LinkedIn -->
          <div class="p-4">
            <div class="flex justify-between items-center mb-2">
              <span class="text-xs font-bold text-blue-300 uppercase">LinkedIn</span>
              <button data-controller="asset-clipboard" data-action="click->asset-clipboard#copy" data-asset-clipboard-text-param="<%= @execution.linkedin_text %>" class="text-xs text-gray-500 hover:text-white">
                Copy
              </button>
            </div>
            <p class="text-sm text-gray-300 whitespace-pre-wrap"><%= @execution.linkedin_text.presence || "N/A" %></p>
          </div>
        </div>
      </div>

      <!-- ADMIN NOTES -->
      <div class="bg-gray-900 border border-gray-800 rounded-xl overflow-hidden">
        <div class="p-4 border-b border-gray-800 bg-gray-800/50">
          <h3 class="text-lg font-bold text-white">ğŸ§  Strategic Notes</h3>
        </div>
        <div class="p-5 text-sm text-gray-400 prose prose-invert max-w-none">
          <%
            # Parse JSON if it's stored as JSON string (legacy) or display directly
            notes = @execution.admin_notes
            begin
              parsed_notes = JSON.parse(notes)
              display_notes = parsed_notes["admin_notes"] || notes
            rescue
              display_notes = notes
            end
          %>
          <%= simple_format(display_notes) %>
        </div>
      </div>

    </div>
  </div>
</div>
