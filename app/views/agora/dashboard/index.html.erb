<%= turbo_stream_from "agora_posts" %>
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <!-- Main Feed -->
  <div class="lg:col-span-2">
    <!-- Quick Access Filters -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
      <%= link_to agora_dashboard_index_path(time_filter: '24h'), class: "bg-gray-900 border border-gray-800 rounded-lg p-4 hover:border-indigo-500 transition-colors group" do %>
        <div class="flex items-center justify-between mb-2">
          <span class="text-xs text-gray-500 font-bold uppercase tracking-wider">Time</span>
          <span class="text-indigo-500 group-hover:text-white transition-colors">‚è∞</span>
        </div>
        <p class="text-white font-bold text-lg">Last 24h</p>
      <% end %>

      <%= link_to agora_dashboard_index_path(status_filter: 'accepted'), class: "bg-gray-900 border border-gray-800 rounded-lg p-4 hover:border-green-500 transition-colors group" do %>
        <div class="flex items-center justify-between mb-2">
          <span class="text-xs text-gray-500 font-bold uppercase tracking-wider">Status</span>
          <span class="text-green-500 group-hover:text-white transition-colors">‚úÖ</span>
        </div>
        <p class="text-white font-bold text-lg">Accepted</p>
      <% end %>

      <%= link_to agora_dashboard_index_path(status_filter: 'rejected'), class: "bg-gray-900 border border-gray-800 rounded-lg p-4 hover:border-red-500 transition-colors group" do %>
        <div class="flex items-center justify-between mb-2">
          <span class="text-xs text-gray-500 font-bold uppercase tracking-wider">Status</span>
          <span class="text-red-500 group-hover:text-white transition-colors">‚ùå</span>
        </div>
        <p class="text-white font-bold text-lg">Rejected</p>
      <% end %>

      <%= link_to agora_dashboard_index_path, class: "bg-gray-900 border border-gray-800 rounded-lg p-4 hover:border-gray-600 transition-colors group" do %>
        <div class="flex items-center justify-between mb-2">
          <span class="text-xs text-gray-500 font-bold uppercase tracking-wider">Reset</span>
          <span class="text-gray-500 group-hover:text-white transition-colors">üîÑ</span>
        </div>
        <p class="text-white font-bold text-lg">All Posts</p>
      <% end %>
    </div>

    <!-- Manual Actions -->
    <div class="bg-gray-900 border border-gray-800 rounded-lg p-5 mb-6">
      <div class="flex items-center justify-between">
        <div>
          <h3 class="text-gray-400 font-bold uppercase text-xs tracking-wider mb-1">Controls</h3>
          <p class="text-xs text-gray-500">Kickstart the creative engine manually.</p>
        </div>
        <%= button_to "üöÄ Generate New Pitch", generate_agora_posts_path, class: "bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded transition-colors text-sm" %>
      </div>
    </div>

<%= turbo_stream_from "agora_system_status" %>
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-xl font-bold text-gray-100 flex items-center">
        <span class="mr-2 text-indigo-500">‚ö°Ô∏è</span> Think Tank Activity
      </h2>
      <span id="agora_system_status" class="text-xs text-gray-500 animate-pulse">Waiting for signals...</span>
    </div>

    <div id="agora_feed" class="flex flex-col space-y-4">
      <% @latest_posts.each do |post| %>
        <%= render Agora::PostCardComponent.new(post: post) %>
      <% end %>

      <% if @pagy.pages > 1 %>
        <div class="mt-6 flex justify-center pagy-nav">
          <%== @pagy.series_nav %>
        </div>
      <% end %>

      <% if @latest_posts.empty? %>
        <div class="text-center py-12 border-2 border-dashed border-gray-800 rounded-lg">
          <p class="text-gray-600">No active discussions. Trigger the Trend Hunter to start.</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Sidebar: Radar & HUD -->
  <div class="space-y-6">
    <!-- Status HUD -->
    <div class="bg-gray-900 border border-gray-800 rounded-lg p-5 shadow-lg relative overflow-hidden">
      <div class="absolute top-0 right-0 p-2 opacity-10">
        <svg class="w-24 h-24 text-indigo-500" fill="currentColor" viewBox="0 0 20 20"><path d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z"></path></svg>
      </div>
      <h3 class="text-gray-400 font-bold uppercase text-xs tracking-wider mb-4">System Status</h3>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <span class="block text-2xl font-mono font-bold text-white"><%= @status_counts['accepted'] || 0 %></span>
          <span class="text-xs text-green-500">Accepted</span>
        </div>
        <div>
          <span class="block text-2xl font-mono font-bold text-white"><%= @status_counts['proceeding'] || 0 %></span>
          <span class="text-xs text-purple-500">Proceeding</span>
        </div>
        <div>
          <span class="block text-2xl font-mono font-bold text-white"><%= @status_counts['published'] || 0 %></span>
          <span class="text-xs text-gray-500">Reviewing</span>
        </div>
        <div>
          <span class="block text-2xl font-mono font-bold text-white"><%= @active_trends.count %></span>
          <span class="text-xs text-orange-500">Active Trends</span>
        </div>
      </div>
    </div>

    <!-- Active Trends List -->
    <div class="bg-gray-900 border border-gray-800 rounded-lg p-5">
      <h3 class="text-gray-400 font-bold uppercase text-xs tracking-wider mb-4 border-b border-gray-800 pb-2">Incoming Signals (Trends)</h3>
      <div class="space-y-3">
        <% @active_trends.each do |trend| %>
          <div class="group">
            <div class="flex justify-between items-start">
              <span class="text-sm font-medium text-gray-300 group-hover:text-indigo-400 transition-colors">
                <%# Handle direct attribute access if hash, assuming content is JSON %>
                <%= trend.content['trend_name'] rescue "Unknown Trend" %>
              </span>
              <span class="text-[10px] bg-gray-800 text-gray-400 px-1.5 py-0.5 rounded">Daily</span>
            </div>
            <p class="text-xs text-gray-600 mt-1 line-clamp-1"><%= trend.content['viral_hook_idea'] rescue "" %></p>
          </div>
        <% end %>
      </div>
      <div class="mt-4 pt-2 border-t border-gray-800">
        <%= link_to "View all trends ‚Üí", agora_trends_path, class: "text-xs text-indigo-500 hover:text-indigo-400" %>
      </div>
    </div>


  </div>
</div>
