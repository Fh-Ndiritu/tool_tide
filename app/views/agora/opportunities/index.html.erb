<div class="min-h-screen bg-gray-900 text-gray-100 font-sans selection:bg-indigo-900 selection:text-white pb-20">

  <!-- Dashboard Header -->
  <div class="border-b border-gray-800 bg-gray-900/95 backdrop-blur sticky top-0 z-30">
    <div class="container mx-auto px-4 py-4 max-w-7xl">
      <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
        <div>
          <h1 class="text-xl font-bold tracking-tight text-white flex items-center gap-3">
            <span class="p-1.5 bg-indigo-500/10 rounded-lg text-indigo-400">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </span>
            Posting Opportunities
          </h1>
        </div>

        <div class="flex items-center gap-2">
           <span class="flex h-2 w-2 relative">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
          </span>
          <span class="text-[10px] font-mono text-green-500 uppercase tracking-widest">Radar Active</span>
        </div>
      </div>
    </div>
  </div>

  <div class="container mx-auto px-4 py-8 max-w-7xl">

    <!-- Quick Access Filters (Compact) -->
    <div class="grid grid-cols-3 md:grid-cols-6 gap-3 mb-8">
      <% [
        { id: 'all', icon: 'âš¡ï¸', label: 'All', border: 'hover:border-indigo-500', text: 'group-hover:text-indigo-400' },
        { id: 'reddit', icon: 'ðŸŠ', label: 'Reddit', border: 'hover:border-orange-500', text: 'group-hover:text-orange-400' },
        { id: 'linkedin', icon: 'ðŸ’¼', label: 'LinkedIn', border: 'hover:border-blue-500', text: 'group-hover:text-blue-400' },
        { id: 'facebook', icon: 'ðŸ‘¥', label: 'Facebook', border: 'hover:border-blue-600', text: 'group-hover:text-blue-500' },
        { id: 'instagram', icon: 'ðŸ“¸', label: 'Instagram', border: 'hover:border-pink-500', text: 'group-hover:text-pink-400' },
        { id: 'pinterest', icon: 'ðŸ“Œ', label: 'Pinterest', border: 'hover:border-red-600', text: 'group-hover:text-red-500' }
      ].each do |filter| %>
        <%= link_to agora_opportunities_path(platform: (filter[:id] == 'all' ? nil : filter[:id])),
            class: "bg-gray-800/50 border border-gray-800 rounded-lg p-3 transition-all duration-300 group #{filter[:border]} #{params[:platform] == filter[:id] || (filter[:id] == 'all' && params[:platform].blank?) ? 'border-gray-600 bg-gray-800 ring-1 ring-white/10' : ''}" do %>
          <div class="flex items-center justify-center gap-2">
            <span class="text-base grayscale group-hover:grayscale-0 transition-all duration-300"><%= filter[:icon] %></span>
            <span class="text-xs font-bold text-gray-400 <%= filter[:text] %> transition-colors hidden sm:inline"><%= filter[:label] %></span>
          </div>
        <% end %>
      <% end %>
    </div>

    <% if @opportunities.any? %>
      <div class="space-y-4">
        <% @opportunities.each do |opp| %>
          <% is_today = opp.created_at.to_date == Date.current %>
          <div class="<%= is_today ? 'bg-gray-800/60 border-indigo-500/20 shadow-lg shadow-indigo-900/5' : 'bg-gray-900 border-gray-800' %> border rounded-lg p-5 hover:border-gray-700 transition-colors duration-300 group relative overflow-hidden">
             <!-- Side Accent -->
            <div class="absolute top-0 left-0 w-1 h-full opacity-60
              <%= opp.platform == 'reddit' ? 'bg-orange-600' :
                  opp.platform == 'linkedin' ? 'bg-blue-600' :
                  opp.platform == 'facebook' ? 'bg-blue-500' :
                  opp.platform == 'instagram' ? 'bg-pink-500' :
                  opp.platform == 'pinterest' ? 'bg-red-600' :
                  'bg-indigo-600' %>"></div>

            <div class="pl-4"> <!-- Left padding for accent -->
              <!-- Compact Header -->
              <div class="flex justify-between items-start mb-3">
                <div class="flex flex-col gap-1 w-full max-w-4xl">
                  <div class="flex items-center gap-3">
                    <span class="text-[10px] font-bold uppercase tracking-wider <%= opp.platform == 'reddit' ? 'text-orange-500' :
                          opp.platform == 'linkedin' ? 'text-blue-500' :
                          opp.platform == 'facebook' ? 'text-blue-400' :
                          opp.platform == 'instagram' ? 'text-pink-400' :
                          opp.platform == 'pinterest' ? 'text-red-500' :
                          'text-indigo-500' %>">
                      <%= opp.platform %>
                    </span>
                    <span class="text-[10px] text-gray-600 font-mono">
                      <%= time_ago_in_words(opp.posted_at || opp.created_at) %> ago
                    </span>
                    <% if is_today %>
                      <span class="px-1.5 py-0.5 rounded text-[9px] font-bold bg-indigo-500/10 text-indigo-400 border border-indigo-500/20 uppercase tracking-wide">
                        New
                      </span>
                    <% end %>
                  </div>
                  <h2 class="text-base font-bold text-gray-100 group-hover:text-indigo-400 transition-colors leading-tight">
                    <%= link_to opp.title, opp.url, target: "_blank", class: "hover:underline decoration-indigo-500 underline-offset-4" %>
                  </h2>
                </div>

                <div class="flex items-center gap-3 ml-4 flex-shrink-0">
                  <%= button_to agora_opportunity_path(opp, status: "dismissed"), method: :patch, class: "flex items-center gap-2 group/dismiss px-2 py-1 rounded hover:bg-red-500/10 transition-colors", title: "Dismiss Signal" do %>
                    <span class="text-[10px] font-bold uppercase tracking-wider text-gray-600 group-hover/dismiss:text-red-500 transition-colors">Dismiss Signal</span>
                    <svg class="w-4 h-4 text-gray-600 group-hover/dismiss:text-red-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
                  <% end %>
                </div>
              </div>

              <!-- Content Snippet -->
              <div class="bg-black/30 rounded border border-gray-800/50 p-3 font-mono text-[11px] leading-relaxed text-gray-400 mb-4 line-clamp-6" title="<%= opp.content.presence || opp.content_snippet %>">
                 <%= opp.content.presence || opp.content_snippet %>
              </div>

              <!-- Permanent Drafts Section -->
              <div class="mt-6">
                <div class="flex items-center gap-2 mb-4 select-none">
                   <svg class="w-4 h-4 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                  </svg>
                  <h3 class="text-xs font-bold text-gray-500 uppercase tracking-widest">
                    Strategic Responses
                  </h3>
                </div>

                <div class="ml-6 grid gap-4 lg:grid-cols-3">
                  <% opp.draft_responses.each_with_index do |draft, idx| %>
                    <div class="bg-gray-800/40 rounded-lg border border-gray-800 p-4 hover:border-indigo-500/30 transition-all group/card flex flex-col h-full shadow-lg shadow-black/20">
                      <div class="flex justify-between items-start mb-3">
                         <span class="text-[9px] font-mono font-bold tracking-tight text-indigo-400 bg-indigo-950/30 px-2 py-0.5 rounded border border-indigo-500/20 uppercase">
                          <%= draft.response_type.split('_').first %>
                        </span>
                         <button type="button"
                                data-controller="clipboard"
                                onclick="event.stopPropagation();"
                                data-action="clipboard#copy"
                                data-clipboard-content-param="<%= draft.content %>"
                                class="text-[9px] font-mono font-bold text-gray-600 hover:text-white transition-colors uppercase tracking-wider flex items-center gap-1">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M8 3a1 1 0 011-1h2a1 1 0 110 2H9a1 1 0 01-1-1z" />
                            <path d="M6 3a2 2 0 00-2 2v11a2 2 0 002 2h8a2 2 0 002-2V5a2 2 0 00-2-2 3 3 0 01-3 3H9a3 3 0 01-3-3z" />
                          </svg>
                          Copy
                        </button>
                      </div>

                      <p class="text-sm text-gray-200 leading-relaxed mb-4 font-medium flex-grow"><%= draft.content %></p>

                       <div class="pt-3 border-t border-gray-800/50 mt-auto">
                        <span class="text-[9px] text-gray-500 font-mono italic leading-tight block"><%= draft.rationale %></span>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <% if defined?(@pagy) && @pagy.pages > 1 %>
        <div class="mt-8 flex justify-center pagy-nav">
          <%== @pagy.series_nav %>
        </div>
      <% end %>

    <% else %>
      <div class="text-center py-24 border border-gray-800 border-dashed rounded-lg bg-gray-900">
        <h3 class="text-gray-100 font-bold text-lg mb-2">No signals detected</h3>
        <p class="text-gray-500 font-mono text-xs">Waiting for new inputs...</p>
      </div>
    <% end %>
  </div>
</div>
