<% content_for :title, "Start Your Landscape Design Journey" %>

<% content_for :description, "Sign up now. Instantly visualize your dream yard with our brush tool and smart prompt editor." %>

<div
  class="
    flex flex-col items-center justify-center min-h-screen bg-neutral-900
    py-10 relative overflow-hidden
  "
>
  <%# Background Gradient %>
  <%# Background Image %>
  <%= image_tag "auth_background_signup.jpg",
      class: "absolute inset-0 w-full h-full object-cover z-0",
      alt: "Background"
  %>
  <%# Dark Overlay %>
  <div class="absolute inset-0 bg-black/80 z-0"></div>

  <%# Card Container %>
  <div
    class="
      w-full max-w-xs sm:max-w-md bg-neutral-800 backdrop-blur-md
      rounded-2xl shadow-2xl mx-4 border border-white/20 relative z-10
    "
  >
    <div class="px-6 py-6 sm:px-8">
      <%# --- LOGIN LINK (Moved to Top) --- %>
      <div class="mb-4 p-2 rounded-xl bg-white/5 border border-white/10 flex items-center justify-between">
        <span class="text-sm font-medium text-neutral-200 pl-1">Already have an account?</span>
        <%= link_to "Log in", new_session_path(resource_name), class: "px-3 py-1.5 text-xs font-bold text-white bg-white/10 hover:bg-white/20 border border-white/10 rounded-lg transition-all duration-200" %>
      </div>

      <h1
        class="
          text-2xl font-extrabold text-transparent bg-clip-text
          bg-gradient-to-r from-white to-neutral-400 text-center
        "
      >
        Create Your Account
      </h1>

        Sign up in seconds to start your professional project.
      </p>

      <%# --- GOOGLE SIGN-UP BUTTON --- %>
      <div class="mb-5">
        <%= button_to user_google_oauth2_omniauth_authorize_path,
                method: :post,
                data: { turbo: false },
                class: "w-[250px] sm:w-[300px]  mx-auto flex items-center justify-center space-x-3 px-4 py-3 border border-white/10 rounded-lg shadow-sm text-sm font-bold text-neutral-200 bg-black/20 hover:bg-black/40 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent transition duration-150 ease-in-out" do %>
          <%= render(IconComponent.new(name: "google", classes: "h-5 w-5 text-white")) %>
          <span>Sign up with Google</span>
        <% end %>
      </div>

      <%# --- OR DIVIDER --- %>
      <div class="relative mb-5">
        <div class="absolute inset-0 flex items-center" aria-hidden="true">
          <div class="w-full border-t border-white/10"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-2 bg-transparent text-neutral-300">Or continue with email</span>
        </div>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="space-y-3">
        <%# # we shall move the legend to the left by adding 20px margin to the right %>
          <fieldset class="group border border-white/20 rounded-lg bg-black/20 focus-within:border-accent transition duration-150">
            <legend class="text-xs font-medium text-neutral-300 group-focus-within:text-accent px-1 ml-auto mr-2">User Name</legend>
            <%= f.text_field :user_name, autofocus: true, placeholder: "User Name", class: "w-full bg-transparent border-none focus:ring-0 focus:outline-none outline-none text-sm px-3 pb-2 pt-1 text-white placeholder-neutral-500" %>
          </fieldset>

          <fieldset class="group border border-white/20 rounded-lg bg-black/20 focus-within:border-accent transition duration-150">
            <legend class="text-xs font-medium text-neutral-300 group-focus-within:text-accent px-1 ml-auto mr-2">Email</legend>
            <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: "w-full bg-transparent border-none focus:ring-0 focus:outline-none outline-none text-sm px-3 pb-2 pt-1 text-white placeholder-neutral-500" %>
          </fieldset>

          <fieldset class="group relative border border-white/20 rounded-lg bg-black/20 focus-within:border-accent transition duration-150" data-controller="password-visibility">
            <legend class="text-xs font-medium text-neutral-300 group-focus-within:text-accent px-1 ml-auto mr-2">
              Password
              <% if @minimum_password_length %>
                <span class="text-[10px] opacity-75 font-normal text-neutral-400 group-focus-within:text-accent">min <%= @minimum_password_length %> chars</span>
              <% end %>
            </legend>
            <%= f.password_field :password, autocomplete: "new-password", class: "w-full bg-transparent border-none focus:ring-0 focus:outline-none outline-none text-sm px-3 pb-2 pt-1 text-white placeholder-neutral-500 pr-10", data: {password_visibility_target: 'input'}, placeholder: "Password" %>
            <button
              type="button"
              data-action="password-visibility#toggle"
              class="
                absolute right-0 top-0 bottom-0 px-3 flex items-center pb-1
                text-neutral-400 hover:text-neutral-200 focus:outline-none
              "
            >
              <span data-password-visibility-target="icon">
                <%= render(IconComponent.new(name: "eye", classes: "h-5 w-5")) %>
              </span>
              <span data-password-visibility-target="icon" class="hidden">
                <%= render(IconComponent.new(name: "eye_slash", classes: "h-5 w-5")) %>
              </span>
            </button>
          </fieldset>


        </div>

        <%= f.hidden_field :privacy_policy, value: true %>


        <div class="mt-4 mb-3 p-2 bg-accent/10 border border-accent/20 rounded-xl flex flex-col items-center justify-center gap-3 text-center mx-auto max-w-full">

           <div class="text-accent flex justify-start w-full ml-10">üõ°Ô∏è <p class="text-sm font-bold text-accent mb-0.5">Security Check Required</p></div>
          <div class="flex justify-center mt-1">
            <%= recaptcha_tags %>
          </div>
        </div>

        <div class="actions mt-5 text-center">
          <%= f.submit "Sign up", class: "w-full flex justify-center py-2.5 px-4 border border-transparent rounded-lg shadow-lg text-base font-bold text-white bg-gradient-to-r from-secondary to-accent hover:shadow-accent/25 transform hover:scale-[1.02] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent cursor-pointer transition-all duration-200" %>
          <p class="mt-4 text-xs text-neutral-300">
            By signing up you agree to the
            <a
              href="/privacy-policy"
              class="font-medium text-accent hover:text-accent/80"
            >
              Privacy Policy
            </a>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>
