<div class="flex flex-col items-center justify-center min-h-screen bg-neutral-900 py-20 relative overflow-hidden">
  <%# Background Gradient %>
  <div class="absolute inset-0 bg-gradient-to-b from-black/80 via-neutral-900/90 to-neutral-900 z-0 pointer-events-none"></div>

  <div class="w-full max-w-md bg-neutral-800/50 backdrop-blur-md rounded-2xl shadow-2xl mx-4 border border-white/10 relative z-10">
    <div class="px-6 py-8 sm:px-8">
      <h1 class="text-3xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-white to-neutral-400 text-center mb-8">
        Edit Profile
      </h1>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="space-y-4">
          <div class="field">
            <%= f.label :user_name, class: "block text-sm font-medium text-neutral-300 mb-1" %>
            <%= f.text_field :user_name, autofocus: true, placeholder: "Your Name", class: "w-full bg-black/20 border border-white/10 rounded-lg shadow-sm focus:ring-2 focus:ring-accent focus:border-transparent text-base p-2.5 placeholder-neutral-500 text-white transition duration-150" %>
          </div>

          <div class="field">
            <%= f.label :email, class: "block text-sm font-medium text-neutral-300 mb-1" %>
            <%= f.email_field :email, autocomplete: "email", class: "w-full bg-black/20 border border-white/10 rounded-lg shadow-sm focus:ring-2 focus:ring-accent focus:border-transparent text-base p-2.5 placeholder-neutral-500 text-white transition duration-150" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="text-sm text-neutral-400">
              Currently waiting confirmation for: <%= resource.unconfirmed_email %>
            </div>
          <% end %>

          <div class="field">
            <%= f.label :password, class: "block text-sm font-medium text-neutral-300 mb-1" %>
            <i class="text-xs text-neutral-500 block mb-1">(leave blank if you don't want to change it)</i>
            <%= f.password_field :password, autocomplete: "new-password", class: "w-full bg-black/20 border border-white/10 rounded-lg shadow-sm focus:ring-2 focus:ring-accent focus:border-transparent text-base p-2.5 placeholder-neutral-500 text-white transition duration-150" %>
            <% if @minimum_password_length %>
              <em class="text-xs text-neutral-500 mt-1 block"><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, class: "block text-sm font-medium text-neutral-300 mb-1" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full bg-black/20 border border-white/10 rounded-lg shadow-sm focus:ring-2 focus:ring-accent focus:border-transparent text-base p-2.5 placeholder-neutral-500 text-white transition duration-150" %>
          </div>

          <div class="field">
            <%= f.label :current_password, class: "block text-sm font-medium text-neutral-300 mb-1" %>
            <i class="text-xs text-neutral-500 block mb-1">(we need your current password to confirm your changes)</i>
            <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full bg-black/20 border border-white/10 rounded-lg shadow-sm focus:ring-2 focus:ring-accent focus:border-transparent text-base p-2.5 placeholder-neutral-500 text-white transition duration-150" %>
          </div>
        </div>

        <div class="actions mt-8">
          <%= f.submit "Update", class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-lg text-base font-bold text-white bg-gradient-to-r from-secondary to-accent hover:shadow-accent/25 transform hover:scale-[1.02] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent cursor-pointer transition-all duration-200" %>
        </div>
      <% end %>

      <div class="mt-10 pt-6 border-t border-white/10">
        <h3 class="text-lg font-medium text-white mb-4">Cancel my account</h3>
        <div class="flex items-center justify-between">
          <p class="text-sm text-neutral-400">Unhappy?</p>
          <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "text-sm font-medium text-red-500 hover:text-red-400 border border-red-500/50 hover:border-red-400 px-4 py-2 rounded-lg transition duration-150" %>
        </div>
      </div>

      <div class="mt-6 text-center">
        <%= link_to "Back", :back, class: "text-sm font-medium text-neutral-400 hover:text-white" %>
      </div>
    </div>
  </div>
</div>
