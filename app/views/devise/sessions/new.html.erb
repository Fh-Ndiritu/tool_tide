<% content_for :title, "Sign In to Hadaa: Access Your AI Landscape Designs" %>

<% content_for :description, "Welcome back! Log in to access your saved projects, plant shopping lists, drone views, and precision designs." %>

<div
  class="
    flex flex-col items-center justify-center min-h-screen bg-neutral-900
    py-20 relative overflow-hidden
  "
>
  <%# Background Gradient %>
  <div
    class="
      absolute inset-0 bg-gradient-to-b from-black/80 via-neutral-900/90
      to-neutral-900 z-0 pointer-events-none
    "
  ></div>

  <div
    class="
      w-full max-w-xs sm:max-w-md bg-neutral-800/50 backdrop-blur-md
      rounded-2xl shadow-2xl mx-4 border border-white/10 relative z-10
    "
  >
    <div class="px-6 py-8 sm:px-8">
      <h1
        class="
          text-3xl font-extrabold text-transparent bg-clip-text
          bg-gradient-to-r from-white to-neutral-400 text-center
        "
      >
        Welcome Back
      </h1>

      <p class="mt-2 text-center text-sm text-neutral-400 mb-8">
        Sign in to continue to your dashboard.
      </p>

      <%# --- GOOGLE SIGN-IN BUTTON --- %>
      <div class="mb-6">
        <%= button_to user_google_oauth2_omniauth_authorize_path,
                method: :post,
                data: { turbo: false },
                class: "w-full flex items-center justify-center space-x-3 px-5 py-2.5 border border-white/10 rounded-lg shadow-sm text-base font-bold text-neutral-200 bg-black/20 hover:bg-black/40 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent transition duration-150 ease-in-out" do %>
          <%= render(IconComponent.new(name: "google", classes: "h-5 w-5 text-white")) %>
          <span>Sign in with Google</span>
        <% end %>
      </div>

      <%# --- OR DIVIDER --- %>
      <div class="relative mb-6">
        <div class="absolute inset-0 flex items-center" aria-hidden="true">
          <div class="w-full border-t border-white/10"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-2 bg-transparent text-neutral-500">Or use your credentials</span>
        </div>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="space-y-4">
          <div class="field">
            <%= f.label :email, class: "block text-sm font-medium text-neutral-300 mb-1" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "you@example.com", class: "w-full bg-black/20 border border-white/10 rounded-lg shadow-sm focus:ring-2 focus:ring-accent focus:border-transparent text-base p-2.5 placeholder-neutral-500 text-white transition duration-150" %>
          </div>

          <div class="field">
            <%= f.label :password, class: "block text-sm font-medium text-neutral-300 mb-1" %>
            <div class="relative mt-1" data-controller="password-visibility">
              <%= f.password_field :password, autocomplete: "current-password", class: "w-full bg-black/20 border border-white/10 rounded-lg shadow-sm focus:ring-2 focus:ring-accent focus:border-transparent text-base p-2.5 pr-10 placeholder-neutral-500 text-white transition duration-150", data: {password_visibility_target: 'input'}, placeholder: "••••••••" %>
              <button
                type="button"
                data-action="password-visibility#toggle"
                class="
                  absolute inset-y-0 right-0 px-3 flex items-center
                  text-neutral-400 hover:text-neutral-200 focus:outline-none
                "
              >
                <span data-password-visibility-target="icon">
                  <%= render(IconComponent.new(name: "eye", classes: "h-5 w-5")) %>
                </span>
                <span data-password-visibility-target="icon" class="hidden">
                  <%= render(IconComponent.new(name: "eye_slash", classes: "h-5 w-5")) %>
                </span>
              </button>
            </div>
          </div>
        </div>

        <div class="mt-4 flex items-center justify-between">
          <div class="text-sm">
            <%= link_to "Forgot password?", new_password_path(resource_name), class: "font-medium text-accent hover:text-accent/80" %>
          </div>
        </div>

        <div class="actions mt-6">
          <%= f.submit "Log in", class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-lg text-base font-bold text-white bg-gradient-to-r from-secondary to-accent hover:shadow-accent/25 transform hover:scale-[1.02] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent cursor-pointer transition-all duration-200" %>
        </div>
      <% end %>

      <div class="mt-6 text-center text-sm">
        <span class="text-neutral-400">Don't have an account?</span>
        <%= link_to "Sign up", new_registration_path(resource_name), class: "font-medium text-accent hover:text-accent/80 ml-1" %>
      </div>
    </div>
  </div>
</div>
