<div class="min-h-screen bg-neutral-900 text-white font-sans p-8">
  <div class="max-w-7xl mx-auto">

    <!-- Breadcrumb / Back -->
    <div class="mb-8 flex items-center gap-4">
      <%= link_to admin_social_posts_path, class: "flex items-center gap-2 text-neutral-400 hover:text-white transition-colors" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to Dashboard
      <% end %>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Left Column: Media -->
      <div class="space-y-8">
        <div class="bg-black/50 rounded-3xl border border-white/5 overflow-hidden shadow-2xl relative group">
           <% if @social_post.image.attached? %>
              <%= image_tag @social_post.image, class: "w-full h-auto object-cover" %>
              <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-colors flex items-center justify-center opacity-0 group-hover:opacity-100">
                <%= link_to rails_blob_path(@social_post.image, disposition: "attachment"), class: "px-6 py-3 bg-white/10 backdrop-blur-md rounded-full border border-white/30 text-white font-bold hover:bg-white hover:text-black transition-all" do %>
                  Download Original
                <% end %>
              </div>
           <% else %>
              <div class="aspect-video flex items-center justify-center text-neutral-600 bg-neutral-800">
                No Image Generated
              </div>
           <% end %>
        </div>

        <!-- Performance Upload Area -->
        <div class="bg-neutral-800/30 rounded-3xl p-8 border border-white/5">
          <h3 class="text-xl font-bold mb-4 flex items-center gap-2">
            <span class="w-2 h-2 rounded-full bg-secondary"></span>
            Performance Analytics
          </h3>

          <div class="grid grid-cols-2 gap-6 mb-6">
            <div class="p-4 bg-neutral-900 rounded-2xl border border-white/5">
              <span class="text-xs text-neutral-500 uppercase tracking-wider">Score</span>
              <div class="text-3xl font-black text-accent mt-1"><%= @social_post.performance_score || "--" %></div>
            </div>
            <!-- More metrics placeholders if we had them extracted -->
          </div>

          <%= form_with model: [:admin, @social_post], local: true do |f| %>
            <div class="relative group cursor-pointer">
              <label class="block w-full border-2 border-dashed border-neutral-700 hover:border-accent rounded-2xl p-8 text-center transition-colors cursor-pointer">
                <div class="text-neutral-400 group-hover:text-white transition-colors">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 mx-auto mb-3 text-neutral-600 group-hover:text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
                  </svg>
                  <p class="font-medium">Upload Performance Screenshot</p>
                  <p class="text-xs text-neutral-500 mt-2">Drag & drop or click to browse</p>
                </div>
                <%= f.file_field :performance_screenshot, class: "hidden", onchange: "this.form.submit()" %>
              </label>
            </div>
          <% end %>

          <% if @social_post.performance_screenshot.attached? %>
            <div class="mt-6">
              <p class="text-sm text-neutral-400 mb-2">Uploaded Screenshot:</p>
              <%= image_tag @social_post.performance_screenshot.variant(:preview), class: "w-full rounded-xl border border-white/10 opacity-70 hover:opacity-100 transition-opacity" %>
            </div>
            <% if @social_post.performance_metrics.present? %>
               <div class="mt-6 bg-black/50 p-4 rounded-xl font-mono text-xs text-green-400 overflow-x-auto">
                 <pre><%= JSON.pretty_generate(@social_post.performance_metrics) %></pre>
               </div>
            <% end %>
          <% end %>
        </div>
      </div>

      <!-- Right Column: Details -->
      <div class="space-y-12">
        <div>
           <div class="flex items-center gap-4 mb-6">
             <span class="px-3 py-1 bg-accent/20 text-accent text-xs font-bold rounded uppercase"><%= @social_post.platform %></span>
             <span class="px-3 py-1 bg-neutral-700 text-neutral-300 text-xs font-bold rounded uppercase"><%= @social_post.status %></span>
             <span class="text-neutral-500 text-sm ml-auto"><%= @social_post.published_at&.to_fs(:long) %></span>
           </div>

           <h2 class="text-2xl font-bold text-white mb-6">Caption Content</h2>
           <div class="bg-neutral-800/50 p-6 rounded-3xl border border-white/5 text-neutral-300 leading-relaxed whitespace-pre-wrap font-light text-lg">
<%= @social_post.content %>
           </div>
           <button
              data-controller="clipboard"
              data-clipboard-content-value="<%= @social_post.content %>

<%= @social_post.tags.to_a.map { |t| "##{t}" }.join(" ") %>"
              data-action="click->clipboard#copy"
              class="mt-4 text-accent text-sm font-bold hover:text-white transition-colors flex items-center gap-2">
             <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
               <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
             </svg>
             Copy Caption to Clipboard
           </button>
        </div>

        <div>
          <h2 class="text-xl font-bold text-white mb-4">Hashtags</h2>
          <div class="flex flex-wrap gap-3">
            <% @social_post.tags.to_a.each do |tag| %>
              <span class="px-4 py-2 bg-neutral-800 rounded-full text-secondary text-sm font-medium border border-transparent hover:border-secondary transition-colors"><%= tag %></span>
            <% end %>
          </div>
        </div>

        <div>
           <h2 class="text-xl font-bold text-white mb-4">Prompt Used (Internal)</h2>
           <div class="p-4 bg-black/30 rounded-2xl border border-white/5 text-neutral-500 font-mono text-xs overflow-x-auto">
             <%= @social_post.prompt %>
           </div>
        </div>
      </div>
    </div>
  </div>
</div>
