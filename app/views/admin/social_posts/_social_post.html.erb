<div id="<%= dom_id post %>" class="bg-neutral-800/50 rounded-3xl border border-white/5 shadow-2xl backdrop-blur-sm overflow-hidden flex flex-col hover:border-accent/30 transition-colors duration-300">

  <!-- Image -->
  <div class="relative aspect-video bg-neutral-900 group">
    <% if post.image.attached? %>
      <%= image_tag post.image, class: "w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" %>
    <% else %>
      <div class="w-full h-full flex items-center justify-center text-neutral-600">
        <span>Generating Image...</span>
      </div>
    <% end %>

    <div class="absolute top-4 right-4 bg-black/60 backdrop-blur-md px-3 py-1 rounded-full text-xs font-mono border border-white/10">
      <%= post.platform.upcase %>
    </div>
  </div>

  <!-- Content -->
  <div class="p-6 flex-1 flex flex-col">
    <div class="mb-4">
      <span class="text-xs text-neutral-400 block mb-2">Generated <%= time_ago_in_words(post.created_at) %> ago</span>
      <p class="text-neutral-200 text-sm leading-relaxed line-clamp-4 font-light">
        <%= post.content %>
      </p>
      <div class="mt-3 flex flex-wrap gap-2">
        <% post.tags.to_a.each do |tag| %>
          <span class="text-xs text-secondary"><%= tag %></span>
        <% end %>
      </div>
    </div>

    <div class="mt-auto pt-6 border-t border-white/5 grid grid-cols-3 gap-3">
      <!-- Show Button -->
      <%= link_to admin_social_post_path(post), class: "flex items-center justify-center gap-2 py-2 px-4 rounded-xl bg-neutral-700 hover:bg-accent hover:text-black transition-colors text-sm font-medium text-neutral-300" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
        </svg>
        Show
      <% end %>

      <!-- Download Button -->
      <% if post.image.attached? %>
        <%= link_to rails_blob_path(post.image, disposition: "attachment"), class: "flex items-center justify-center gap-2 py-2 px-4 rounded-xl bg-neutral-700 hover:bg-accent hover:text-black transition-colors text-sm font-medium text-neutral-300" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
          </svg>
          Download
        <% end %>
      <% else %>
         <button disabled class="flex items-center justify-center gap-2 py-2 px-4 rounded-xl bg-neutral-800 text-neutral-600 text-sm cursor-not-allowed">
            Processing...
         </button>
      <% end %>

      <!-- Copy Text Button -->
      <button
        data-controller="clipboard"
        data-clipboard-content-value="<%= post.content %>

<%= post.tags.to_a.map { |t| "#{t}" }.join(" ") %>"
        data-action="click->clipboard#copy"
        class="flex items-center justify-center gap-2 py-2 px-4 rounded-xl bg-neutral-700 hover:bg-neutral-600 transition-colors text-sm font-medium text-neutral-300">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
        </svg>
        Copy Text
      </button>
    </div>

    <!-- Performance Section -->
    <div class="mt-4 pt-4 border-t border-white/5">
       <% if post.performance_score.present? %>
          <div class="flex items-center justify-between">
             <span class="text-xs text-neutral-400">Prf. Score</span>
             <span class="text-lg font-bold text-accent"><%= post.performance_score %></span>
          </div>
       <% else %>
          <%= form_with model: [:admin, post], local: true, class: "flex items-center gap-2" do |f| %>
            <label class="cursor-pointer flex-1 flex items-center justify-center gap-2 py-2 border border-dashed border-neutral-600 rounded-xl hover:border-accent hover:text-accent transition-colors text-xs text-neutral-500">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
              </svg>
              Upload Stats
              <%= f.file_field :performance_screenshot, class: "hidden", onchange: "this.form.submit()" %>
            </label>
          <% end %>
       <% end %>
    </div>

  </div>
</div>
