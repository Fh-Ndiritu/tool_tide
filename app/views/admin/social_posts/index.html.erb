<div class="min-h-screen bg-neutral-900 text-white font-sans p-8">
  <div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="flex justify-between items-center mb-12 animate-fade-in-up">
      <div>
        <span class="inline-block py-1 px-3 rounded-full bg-accent/10 border border-accent/30 text-accent text-sm font-bold tracking-wider mb-2">
          ADMIN
        </span>
        <h1 class="text-4xl md:text-5xl font-extrabold tracking-tight">
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-accent to-secondary">Facebook</span> Content
        </h1>
      </div>

      <%= button_to generate_admin_social_posts_path, method: :post, class: "group relative px-8 py-4 bg-accent text-black font-bold rounded-full hover:bg-white hover:text-black transition-all duration-300 transform hover:scale-105 shadow-[0_0_20px_rgba(0,172,193,0.4)] flex items-center gap-2" do %>
        <span>Generate New Posts</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 group-hover:rotate-180 transition-transform duration-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.384-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
        </svg>
      <% end %>
    </div>

    <!-- Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% @social_posts.each do |post| %>
        <div class="bg-neutral-800/50 rounded-3xl border border-white/5 shadow-2xl backdrop-blur-sm overflow-hidden flex flex-col hover:border-accent/30 transition-colors duration-300">

          <!-- Image -->
          <div class="relative aspect-video bg-neutral-900 group">
            <% if post.image.attached? %>
              <%= image_tag post.image, class: "w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" %>
            <% else %>
              <div class="w-full h-full flex items-center justify-center text-neutral-600">
                <span>Generating Image...</span>
              </div>
            <% end %>

            <div class="absolute top-4 right-4 bg-black/60 backdrop-blur-md px-3 py-1 rounded-full text-xs font-mono border border-white/10">
              <%= post.platform.upcase %>
            </div>
          </div>

          <!-- Content -->
          <div class="p-6 flex-1 flex flex-col">
            <div class="mb-4">
              <span class="text-xs text-neutral-400 block mb-2"><%= post.published_at&.strftime("%B %d, %Y") || "Draft Scheduled" %></span>
              <p class="text-neutral-200 text-sm leading-relaxed line-clamp-4 font-light">
                <%= post.content %>
              </p>
              <div class="mt-3 flex flex-wrap gap-2">
                <% post.tags.to_a.each do |tag| %>
                  <span class="text-xs text-secondary">#<%= tag %></span>
                <% end %>
              </div>
            </div>

            <div class="mt-auto pt-6 border-t border-white/5 grid grid-cols-2 gap-3">
              <!-- Download Button -->
              <% if post.image.attached? %>
                <%= link_to rails_blob_path(post.image, disposition: "attachment"), class: "flex items-center justify-center gap-2 py-2 px-4 rounded-xl bg-neutral-700 hover:bg-accent hover:text-black transition-colors text-sm font-medium text-neutral-300" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                  </svg>
                  Download
                <% end %>
              <% else %>
                 <button disabled class="flex items-center justify-center gap-2 py-2 px-4 rounded-xl bg-neutral-800 text-neutral-600 text-sm cursor-not-allowed">
                    Processing...
                 </button>
              <% end %>

              <!-- Copy Text Button (Simple JS implementation inline for now) -->
              <button onclick="navigator.clipboard.writeText(`<%= j post.content %>`)" class="flex items-center justify-center gap-2 py-2 px-4 rounded-xl bg-neutral-700 hover:bg-neutral-600 transition-colors text-sm font-medium text-neutral-300">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                </svg>
                Copy Text
              </button>
            </div>

            <!-- Performance Section -->
            <div class="mt-4 pt-4 border-t border-white/5">
               <% if post.performance_score.present? %>
                  <div class="flex items-center justify-between">
                     <span class="text-xs text-neutral-400">Prf. Score</span>
                     <span class="text-lg font-bold text-accent"><%= post.performance_score %></span>
                  </div>
               <% else %>
                  <%= form_with model: [:admin, post], local: true, class: "flex items-center gap-2" do |f| %>
                    <label class="cursor-pointer flex-1 flex items-center justify-center gap-2 py-2 border border-dashed border-neutral-600 rounded-xl hover:border-accent hover:text-accent transition-colors text-xs text-neutral-500">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
                      </svg>
                      Upload Stats
                      <%= f.file_field :performance_screenshot, class: "hidden", onchange: "this.form.submit()" %>
                    </label>
                  <% end %>
               <% end %>
            </div>

          </div>
        </div>
      <% end %>
    </div>


  </div>
</div>
