<div class="container mx-auto px-4 py-8">

  <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-6 mb-8">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">
      <%= @blog.title %>
    </h1>

    <p class="text-gray-600 dark:text-gray-400 mb-4">
      Location: <%= @blog.location_name %>
    </p>

    <% if @blog.slug %>
      <p class="mb-4">
        <strong>Public URL:</strong>
        <%= link_to landscaping_guide_url(@blog.slug.split('/').last), landscaping_guide_path(@blog.slug.split('/').last), class: "text-blue-600 hover:underline", target: "_blank" %>
      </p>
    <% end %>

    <div class="prose dark:prose-invert max-w-none">
      <h2 class="text-xl font-semibold mt-6 mb-2">Deep Dive Raw</h2>

      <div
        class="
          bg-gray-100 dark:bg-gray-900 p-4 rounded overflow-auto h-64
          text-sm font-mono mb-8
        "
      >
        <%= @blog.raw_deep_dive %>
      </div>

      <h2 class="text-xl font-semibold mt-6 mb-2">Generated Content</h2>

      <div class="bg-gray-50 dark:bg-gray-900 p-6 rounded border dark:border-gray-700">
        <%= markdown(@blog.content) if @blog.content %>
      </div>
    </div>
  </div>
</div>
