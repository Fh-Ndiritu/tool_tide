<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-800">AI Blogs</h1>
    <%= link_to "Generate New Blog", new_admin_blog_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <div class="bg-white dark:bg-gray-800 shadow-md rounded my-6 overflow-x-auto">
    <table class="min-w-full w-full table-auto">
      <thead>
        <tr
          class="
            bg-gray-200 dark:bg-gray-700 text-gray-600 dark:text-gray-200
            uppercase text-sm leading-normal
          "
        >
          <th class="py-3 px-6 text-left">Location</th>
          <th class="py-3 px-6 text-left">Slug</th>
          <th class="py-3 px-6 text-left">Updated At</th>
          <th class="py-3 px-6 text-left">Status</th>
          <th class="py-3 px-6 text-center">Actions</th>
        </tr>
      </thead>
      <tbody class="text-gray-600 dark:text-gray-300 text-sm font-light">
        <% @blogs.each do |blog| %>
          <tr
            class="
              border-b border-gray-200 dark:border-gray-700
              hover:bg-gray-100 dark:hover:bg-gray-600
            "
          >
            <td class="py-3 px-6 text-left whitespace-nowrap">
              <span class="font-medium"><%= blog.location_name %></span>
            </td>
            <td class="py-3 px-6 text-left">
              <%= link_to blog.slug, landscaping_guide_path(blog.slug.split('/').last), class: "text-blue-500 hover:underline" if blog.slug %>
            </td>
            <td class="py-3 px-6 text-left whitespace-nowrap">
              <%= blog.updated_at.strftime("%B %d, %Y %l:%M %p") %>
            </td>
            <td class="py-3 px-6 text-left">
              <% if blog.published? %>
                <span class="bg-green-200 text-green-600 py-1 px-3 rounded-full text-xs">Published</span>
              <% else %>
                <span class="bg-yellow-200 text-yellow-600 py-1 px-3 rounded-full text-xs">Generating...</span>
              <% end %>
            </td>
            <td class="py-3 px-6 text-center">
              <div class="flex item-center justify-center">
                <%= link_to "View Details", admin_blog_path(blog.id), class: "w-4 mr-2 transform hover:text-purple-500 hover:scale-110" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
