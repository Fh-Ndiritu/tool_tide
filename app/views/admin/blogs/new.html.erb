<div class="container mx-auto px-4 py-8 max-w-lg">
  <h1 class="text-3xl font-bold mb-6 text-gray-800 dark:text-gray-100">
    Generate Location Guide
  </h1>

  <%= form_with(model: [:admin, @blog], local: true, class: "bg-white dark:bg-gray-800 shadow-md rounded px-8 pt-6 pb-8 mb-4") do |form| %>
    <% if @blog.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <ul>
          <% @blog.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :location_name, "Location Name (City, State/Country)", class: "block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2" %>
      <%= form.text_field :location_name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline dark:bg-gray-700 dark:text-white dark:border-gray-600", placeholder: "e.g. Austin, Texas" %>
    </div>

  <% end %>
</div>
