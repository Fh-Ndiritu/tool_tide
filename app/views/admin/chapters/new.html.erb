<% content_for :title, "Create New Video Chapter | AI Video Production - Hadaa" %>
<% content_for :description, "Create a new AI-generated video chapter. Choose your video mode (landscape or portrait), add your content overview, and let our AI system generate professional educational videos automatically." %>

<div class="max-w-2xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-8">Create New Chapter</h1>

  <%= form_with(model: [:admin, @chapter], class: "space-y-6") do |form| %>
    <% if @chapter.errors.any? %>
      <div class="bg-red-50 p-4 rounded-md">
        <h2 class="text-red-800 text-sm font-medium"><%= pluralize(@chapter.errors.count, "error") %> prohibited this chapter from being saved:</h2>
        <ul class="list-disc list-inside text-red-700 text-sm mt-2">
          <% @chapter.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.text_field :title, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
      </div>
    </div>

    <div>
      <%= form.label :video_mode, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.select :video_mode, ["landscape", "portrait"], {}, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
      </div>
    </div>

    <div>
      <%= form.label :content, "Episode Overview", class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.text_area :content, rows: 10, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md", placeholder: "Enter the full content overview for the episode..." %>
      </div>
    </div>

    <div class="flex justify-end">
      <%= link_to "Cancel", admin_chapters_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 mr-3" %>
      <%= form.submit "Create Chapter", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  <% end %>
</div>
