<% content_for :title, "Hadaa AI: Advanced Features Roadmap & New Tools" %>

<% content_for :description, "The future of AI landscape design: Brush Tool, Drone View, Prompt Editor, and more. See what we're building and get early access to new tools." %>

<div class="w-full">
  <% if notice.present? %>
    <p
      class="
        py-2 px-3 bg-green-50 mb-5 text-green-700 font-medium rounded-md
        inline-block
      "
      id="notice"
    >
      <%= notice %>
    </p>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl text-text-dark">Features Roadmap</h1>

    <%# Link to create a new feature (Admin only, and user must be logged in) %>
    <% if user_signed_in? && current_user.admin? %>
      <%= link_to "Propose New Feature", new_feature_path,
        class: "rounded-md px-3.5 py-2.5 bg-cta-bg hover:opacity-90 text-text-dark block font-medium transition duration-150 ease-in-out" %>
    <% end %>
  </div>

  <div id="features" class="min-w-full">
    <%# Render the list using the modern card partial structure %>
    <%# NOTE: This assumes @features is loaded in the controller %>
    <%= render "features/features_list", features: @features %>
  </div>
</div>
