<div class="p-2 bg-[#333] rounded flex items-center gap-2 cursor-pointer hover:bg-[#444] transition"
     id="<%= dom_id(layer) %>"
     data-unified-dashboard-target="sidebarLayer"
     data-action="click->unified-dashboard#selectLayer"
     data-unified-dashboard-layer-id-param="<%= layer.id %>"
     data-unified-dashboard-image-url-param="<%= layer.image.attached? ? url_for(layer.image) : '' %>">
  <div class="relative">
    <% if layer.image.attached? %>
       <%= image_tag layer.image, class: "w-10 h-10 object-cover rounded" %>
    <% elsif layer.status_pending? || layer.status_processing? %>
       <div class="w-10 h-10 bg-gray-600 rounded flex items-center justify-center animate-pulse">
         <svg class="animate-spin h-5 w-5 text-green-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
           <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
           <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
         </svg>
       </div>
    <% else %>
       <div class="w-10 h-10 bg-gray-600 rounded flex items-center justify-center text-[10px] text-red-400 font-bold">Error</div>
    <% end %>
    <% if layer.layer_type_generation? && layer.views_count == 0 %>
      <div class="unviewed-dot absolute -top-1 -right-1 w-3 h-3 bg-green-500 rounded-full border-2 border-[#1e1e1e] shadow-lg" title="New Generation"></div>
    <% end %>
  </div>
  <div class="flex-1 min-w-0">
    <div class="text-sm font-medium truncate"><%= layer.layer_type.humanize %></div>
    <div class="text-xs text-gray-400 truncate"><%= layer.prompt || "No prompt" %></div>
  </div>
  <button class="text-gray-400 hover:text-white">
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" /></svg>
  </button>
</div>
