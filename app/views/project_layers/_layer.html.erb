<%# locals: { layer: layer, depth: 0 } %>
<% depth = local_assigns[:depth] || 0 %>
<% padding_left = depth * 12 + 8 %>

<!-- Layer Container -->
<div class="flex flex-col mb-1 relative">
  <!-- Layer Row -->
  <div class="flex items-center gap-2 p-2 rounded hover:bg-[#333] transition cursor-pointer group <%= "ring-1 ring-green-500/50 bg-[#333]" if local_assigns[:active] %>"
       style="padding-left: <%= padding_left %>px; border-left: <%= depth > 0 ? "2px solid #333" : "none" %>"
       id="<%= dom_id(layer) %>"
       data-unified-dashboard-target="sidebarLayer"
       data-action="click->unified-dashboard#selectLayer"
       data-unified-dashboard-layer-id-param="<%= layer.id %>"
       data-unified-dashboard-image-url-param="<%= layer.image.attached? ? url_for(layer.image) : '' %>">

    <!-- Collapse/Expand Icon (Only if children exist) -->
    <div class="w-4 h-4 flex items-center justify-center">
      <% if layer.child_layers.any? %>
        <button class="text-gray-500 hover:text-white transition focus:outline-none p-0.5 rounded"
                data-action="click->unified-dashboard#toggleLayer"
                data-layer-id="<%= layer.id %>">
           <svg class="w-3 h-3 transform transition-transform duration-200 rotate-90" fill="currentColor" viewBox="0 0 20 20">
             <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
           </svg>
        </button>
      <% end %>
    </div>

    <!-- Thumbnail / Status -->
    <div class="relative shrink-0">
      <% if layer.image.attached? %>
         <%= image_tag layer.image, class: "w-8 h-8 object-cover rounded border border-[#444]" %>
      <% elsif layer.status_pending? || layer.status_processing? %>
         <div class="w-8 h-8 bg-[#2a2a2a] rounded flex items-center justify-center animate-pulse border border-[#444]">
           <svg class="animate-spin h-4 w-4 text-green-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
             <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
             <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
           </svg>
         </div>
      <% else %>
         <div class="w-8 h-8 bg-[#2a2a2a] rounded flex items-center justify-center text-[8px] text-red-400 font-bold border border-red-900/50">Error</div>
      <% end %>

      <!-- Type Badge Icon -->
      <div class="absolute -bottom-1 -right-1 w-4 h-4 bg-[#1e1e1e] rounded-full flex items-center justify-center border border-[#333]">
        <% case layer.layer_type %>
        <% when "original" %>
          <svg class="w-2.5 h-2.5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
        <% when "mask" %>
          <svg class="w-2.5 h-2.5 text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" /></svg>
        <% when "generation" %>
          <svg class="w-2.5 h-2.5 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" /></svg>
        <% else %>
          <svg class="w-2.5 h-2.5 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>
        <% end %>
      </div>

      <% if layer.layer_type_generation? && layer.views_count == 0 %>
        <div class="unviewed-dot absolute -top-1 -right-1 w-2.5 h-2.5 bg-green-500 rounded-full border border-[#1e1e1e] shadow-lg animate-pulse" title="New"></div>
      <% end %>
    </div>

    <!-- Info -->
    <div class="flex-1 min-w-0">
      <div class="text-xs font-medium text-gray-200 truncate group-hover:text-white transition"><%= layer.layer_type.humanize %></div>
      <div class="text-[10px] text-gray-500 truncate"><%= layer.prompt || "Original Image" %></div>
    </div>
  </div>

  <!-- Children (Recursive) -->
  <% if layer.child_layers.any? %>
    <div id="layer_children_<%= layer.id %>" class="flex flex-col">
      <% layer.child_layers.ordered.each do |child| %>
        <%= render partial: "project_layers/layer", locals: { layer: child, depth: depth + 1 } %>
      <% end %>
    </div>
  <% end %>
</div>
