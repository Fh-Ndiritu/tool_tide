<div id="<%= dom_id(project_layer) %>"
     data-controller="layer-tree <%= "scroll-to" unless project_layer.viewed? %>"
     data-layer-tree-hidden-class="hidden"
     data-layer-tree-rotate-class="rotate-90"
     data-layer-tree-children-id-value="<%= local_assigns[:children_container_id] %>"
     class="group/layer">

  <div class="flex items-center gap-1 mb-1 relative">
     <!-- Toggle Button (Absolute or Flex) -->
     <div class="w-4 flex justify-center flex-shrink-0">
       <% if project_layer.has_children? %>
         <button type="button"
                 data-action="click->layer-tree#toggle"
                 class="text-gray-400 hover:text-gray-200 transition-transform duration-200 rotate-90 p-0.5"
                 data-layer-tree-target="chevron">
           <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-3 h-3">
             <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
           </svg>
         </button>
       <% end %>
     </div>

     <!-- Main Item Link -->
     <% is_clickable = project_layer.complete? || project_layer.original? %>
      <% if is_clickable %>
        <%= link_to project_design_project_layer_path(project_layer.project, project_layer.design, project_layer),
                    class: "flex-1 flex items-center gap-2 p-1.5 rounded-lg border border-transparent hover:bg-gray-700 hover:border-gray-600 transition-colors min-w-0 relative group/link
                    #{if project_layer.viewed?
                    'bg-gray-800/40'
                    elsif project_layer.conclusive?
                      'bg-accent/30'
                    else
                     'bg-accent/20'
                     end
                    }",
                    data: {
                       projects_target: "layerLink",
                       project_onboarding_target: "layerLink"
                     } do %>
          <%= render "project_layers/layer_content", project_layer: project_layer %>
       <% end %>
      <% else %>
        <div class="flex-1 flex items-center gap-2 p-1.5 rounded-lg bg-gray-800/20 border border-transparent cursor-not-allowed opacity-70 min-w-0 relative">
           <%= render "project_layers/layer_content", project_layer: project_layer %>
        </div>
      <% end %>

  </div>

  <% unless local_assigns[:suppress_children] %>
    <div id="<%= dom_id(project_layer) %>_children"
         data-layer-tree-target="children"
         class="ml-2 pl-2 border-l border-gray-700 space-y-1 <%= 'hidden' unless project_layer.has_children? %>">
      <%= render partial: "project_layers/project_layer", collection: project_layer.children, as: :project_layer %>
    </div>
  <% end %>
</div>
