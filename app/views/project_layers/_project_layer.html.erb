<div id="<%= dom_id(project_layer) %>"
     data-controller="toggle"
     data-toggle-hidden-class="hidden"
     data-toggle-rotate-class="rotate-90"
     class="group/layer">

  <div class="flex items-center gap-1 mb-1 relative">
     <!-- Toggle Button (Absolute or Flex) -->
     <div class="w-4 flex justify-center flex-shrink-0">
       <% if project_layer.has_children? %>
         <button type="button"
                 data-action="toggle#toggle"
                 class="text-gray-600 hover:text-gray-300 transition-transform duration-200 rotate-90 p-0.5"
                 data-toggle-target="icon">
           <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-3 h-3">
             <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
           </svg>
         </button>
       <% end %>
     </div>

     <!-- Main Item Link -->
     <% is_clickable = project_layer.complete? || project_layer.original? %>
      <% if is_clickable %>
        <%= link_to project_design_project_layer_path(project_layer.project, project_layer.design, project_layer),
                    class: "flex-1 flex items-center gap-2 p-1.5 rounded-lg bg-gray-800/40 border border-transparent hover:bg-gray-700 hover:border-gray-600 transition-colors min-w-0 relative group/link",
                    data: {
                      action: "click->projects#setActiveLayer",
                      layer_id: project_layer.id,
                      generation_type: project_layer.generation_type,
                      preset: project_layer.preset,
                      turbo_stream: true,
                      projects_target: "layerLink"
                    } do %>
          <%= render "project_layers/layer_content", project_layer: project_layer %>
       <% end %>
      <% else %>
        <div class="flex-1 flex items-center gap-2 p-1.5 rounded-lg bg-gray-800/20 border border-transparent cursor-not-allowed opacity-70 min-w-0 relative">
           <%= render "project_layers/layer_content", project_layer: project_layer %>
        </div>
      <% end %>

      <!-- Hover Actions (Sibling) -->
      <div class="absolute right-2 top-1/2 -translate-y-1/2 flex items-center gap-1 opacity-0 group-hover/layer:opacity-100 transition-opacity bg-gray-800/90 rounded-lg p-1 border border-white/10 shadow-sm backdrop-blur-md z-10 pointer-events-none group-hover/layer:pointer-events-auto">
         <!-- Eye (View/Focus) -->
         <% if is_clickable %>
             <button class="p-1 text-gray-400 hover:text-white rounded hover:bg-white/10 transition-colors"
                     title="View Layer"
                     onclick="this.closest('.relative').querySelector('a').click()">
                 <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3.5 h-3.5">
                   <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
                   <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                 </svg>
             </button>
         <% end %>

         <!-- Delete -->
         <% unless project_layer.original? %>
           <%= button_to project_design_project_layer_path(project_layer.project, project_layer.design, project_layer),
               method: :delete,
               class: "p-1 text-gray-400 hover:text-red-400 rounded hover:bg-red-400/10 transition-colors",
               title: "Delete Layer",
               form: { data: { turbo_confirm: "Are you sure you want to delete this layer?" } } do %>
             <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3.5 h-3.5">
               <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
             </svg>
           <% end %>
         <% end %>
      </div>
  </div>

  <div id="<%= dom_id(project_layer) %>_children"
       data-toggle-target="content"
       class="ml-2 pl-2 border-l border-gray-700 space-y-1 <%= 'hidden' unless project_layer.has_children? %>">
    <%= render partial: "project_layers/project_layer", collection: project_layer.children, as: :project_layer %>
  </div>
</div>
