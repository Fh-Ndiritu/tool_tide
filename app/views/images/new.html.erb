<%=  render "images/head_seo", conversion: @conversion, source: @source %>
<%# You only need content_for(:robots) if you want to explicitly change it from the default "index, follow" %>
<%# For example, to prevent indexing: %>
<%# content_for(:robots, "noindex, nofollow") %>
<div class="w-full">
  <h1 class="text-4xl font-bold text-center text-text-secondary my-8">
    <%= t("images.titles.from.#{@image_form.source}") %>
    <%= t("images.titles.to.#{@image_form.conversion}") %>
  </h1>
 <div class="pb-8">
   <%= turbo_frame_tag "image_form" do %>
      <%= render "image_form", conversion: @conversion, source: @source, image_form: @image_form %>
  <% end %>
 </div>

   <div id="results" class="mt-4 my-4">
    <div class="justify-center items-center">
    </div>
  </div>


  <div class="justify-center items-center card bg-base-100 shadow-xl image-full my-8 p-6 rounded-lg border-dashed border-2 border-gray-300">
    <h2 class="text-2xl font-semibold text-text-secondary"><%= t("images.instructions.convert.title") %> for <%= @image_form.conversion.upcase %></h2>
    <ol class="list-decimal list-inside my-6 text-sm leading-relaxed">
      <% t("images.instructions.convert.steps").each do |step| %>
        <li><%= step %></li>
        <% end %>
    </ol>
  </div>
</div>
