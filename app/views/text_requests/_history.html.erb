<div class="w-full flex-shrink-0 md:hidden px-4 pt-2 pb-4 bg-neutral-800">
  <h2 class="text-xl font-bold mb-4 text-text-accent">History</h2>
  <span class="py-1 text-sm text-neutral-300">Click to resume editing</span>

  <div
    id="history-list-mobile"
    class="flex flex-row space-x-4 overflow-x-auto pt-2 pb-4"
  >
    <%= render partial: 'text_requests/text_request_preview', collection: @text_requests, as: :text_request %>
  </div>

  <div class="flex items-center space-x-2 mt-2">
    <h3 class="text-sm font-medium text-gray-400 uppercase tracking-wider">
      Available Credits:
    </h3>
    <span class="text-xl font-extrabold text-accent leading-tight"><%= current_user.pro_engine_credits %></span>
  </div>
</div>

<aside class="w-full h-full md:w-1/4 p-4 bg-neutral-800 hidden md:flex flex-col">
  <div class="flex items-center space-x-2 my-4">
    <h3 class="text-sm font-medium text-gray-400 uppercase tracking-wider">
      Available Credits:
    </h3>
    <span class="text-lg font-extrabold text-accent leading-tight"><%= current_user.pro_engine_credits %></span>
  </div>

  <h2 class="text-xl font-bold mb-4 text-text-accent">History</h2>
  <span class="py-1 text-sm text-neutral-300">Click to resume editing</span>

  <div id="history-list-desktop" class="space-y-4 flex-1 overflow-y-auto px-1">
    <%= render partial: 'text_requests/text_request_preview', collection: @text_requests, as: :text_request %>
  </div>
</aside>
