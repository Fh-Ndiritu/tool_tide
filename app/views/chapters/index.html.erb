<% content_for :title, "Video Chapters | Create AI-Generated Educational Videos - Hadaa" %>
<% content_for :description, "Manage and create AI-generated video chapters for educational content. View all your video projects, track their status, and create new chapters with our AI-powered video production system." %>

<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Video Chapters</h1>
    <%= link_to "New Chapter", new_chapter_path, class: "bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 transition" %>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-md">
    <ul role="list" class="divide-y divide-gray-200">
      <% @chapters.each do |chapter| %>
        <li>
          <%= link_to chapter_path(chapter), class: "block hover:bg-gray-50" do %>
            <div class="px-4 py-4 sm:px-6">
              <div class="flex items-center justify-between">
                <p class="text-sm font-medium text-indigo-600 truncate"><%= chapter.title %></p>
                <div class="ml-2 flex-shrink-0 flex">
                  <p class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= chapter.status == 'completed' ? 'bg-green-100 text-green-800' : (chapter.status == 'failed' ? 'bg-red-100 text-red-800' : 'bg-yellow-100 text-yellow-800') %>">
                    <%= chapter.status.capitalize %>
                  </p>
                </div>
              </div>
              <div class="mt-2 sm:flex sm:justify-between">
                <div class="sm:flex">
                  <p class="flex items-center text-sm text-gray-500">
                    <%= chapter.video_mode.capitalize %> Mode
                  </p>
                </div>
                <div class="mt-2 flex items-center text-sm text-gray-500 sm:mt-0">
                  <p>
                    Created <%= time_ago_in_words(chapter.created_at) %> ago
                  </p>
                </div>
              </div>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
