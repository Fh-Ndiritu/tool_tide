<div class="flex items-center justify-between bg-white/5 p-2 rounded-lg border border-white/5"
     data-controller="variations"
     data-project-onboarding-target="variations"
     data-variations-image-cost-value="<%= GOOGLE_IMAGE_COST %>">
  <div class="flex items-center gap-3">
    <span class="text-xs font-medium text-gray-300">Variations</span>
    <span class="text-[10px] font-bold text-blue-400 bg-blue-500/10 px-1.5 py-0.5 rounded" data-variations-target="cost"><%= 2 * GOOGLE_IMAGE_COST %> credits</span>
  </div>

  <div class="flex items-center bg-gray-900 rounded-md border border-white/10 p-0.5">
     <button class="w-7 h-7 flex items-center justify-center rounded hover:bg-white/10 text-gray-400 hover:text-white transition-colors"
             data-action="click->variations#decrement">
       <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-3.5 h-3.5">
         <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 12h-15" />
       </svg>
     </button>

     <span class="w-6 text-center text-xs font-bold text-white tabular-nums" data-variations-target="count">2</span>

     <button class="w-7 h-7 flex items-center justify-center rounded hover:bg-white/10 text-gray-400 hover:text-white transition-colors"
             data-action="click->variations#increment">
       <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-3.5 h-3.5">
         <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
       </svg>
     </button>
  </div>
  <!-- Keep projects-target for the form submission logic in projects controller to still find it -->
  <input type="hidden" name="variations" value="2"
         data-variations-target="input"
         data-projects-target="variationsInput">
</div>
