<div id="empty_state" data-unified-dashboard-target="emptyState" class="<%= hidden ? 'hidden' : '' %> text-center">
  <div class="mb-4 text-gray-400">
     <svg class="w-16 h-16 mx-auto mb-2 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
     <h3 class="text-xl font-medium">Start a New Design</h3>
     <p class="text-sm mt-1">Upload an image to begin editing</p>
  </div>
   <label class="px-6 py-3 bg-green-500 hover:bg-green-600 text-black font-bold rounded-lg cursor-pointer transition">
      Upload Image
      <%= form_with model: [project, ProjectLayer.new], url: project_layers_path(project), local: false, html: { class: "hidden" } do |f| %>
        <%= f.hidden_field :layer_type, value: "original" %>
        <%= f.file_field :image, class: "hidden", accept: "image/*", onchange: "this.form.requestSubmit()" %>
      <% end %>
   </label>
</div>
