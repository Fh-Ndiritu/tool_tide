<%= render "projects/mobile_redirect" %>
<div>
  <div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-2xl font-bold">My Projects</h1>

    <%= form_with url: projects_path, local: true, multipart: true, class: "flex items-center gap-4" do |f| %>
      <label class="cursor-pointer bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors">
        <span>+ New Project</span>
        <%= f.file_field :image, class: "hidden", accept: "image/*", onchange: "this.form.submit()" %>
      </label>
    <% end %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @projects.each do |project| %>
      <%= link_to project_path(project), class: "block bg-gray-800 rounded-lg shadow hover:shadow-md transition-shadow p-4" do %>
        <div class="aspect-video bg-gray-700 rounded mb-4 overflow-hidden relative">
          <% if project.project_layers.first&.image&.attached? %>
            <%= image_tag project.project_layers.first.image, class: "w-full h-full object-cover" %>
          <% else %>
            <div class="flex items-center justify-center h-full text-gray-400">
              No Preview
            </div>
          <% end %>
        </div>
        <h3 class="font-medium text-lg truncate"><%= project.title %></h3>
        <p class="text-sm text-gray-500"><%= time_ago_in_words(project.created_at) %> ago</p>
      <% end %>
    <% end %>
  </div>
</div>
</div>
