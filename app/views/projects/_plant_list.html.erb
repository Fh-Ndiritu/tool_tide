<% if plants.any? %>
  <div class="space-y-4">
    <% plants.each do |plant| %>
      <div class="bg-[#333] rounded-lg p-3 border border-[#444] group hover:border-green-500 transition shadow-sm">
        <div class="flex justify-between items-start mb-2">
          <h4 class="font-bold text-sm text-gray-200 group-hover:text-green-400 transition-colors">
            <%= plant.english_name %>
          </h4>
          <!-- Remove/Action Button Actions could go here -->
        </div>

        <% if plant.respond_to?(:description) %>
          <p class="text-[10px] text-gray-400 line-clamp-2 mb-2">
            <%= plant.description %>
          </p>
        <% end %>

        <div class="flex items-center justify-between mt-2 pt-2 border-t border-[#444]">
          <% if plant.respond_to?(:size) %>
             <span class="text-[10px] text-gray-500 bg-[#222] px-2 py-1 rounded">
               <%= plant.size %> ft
             </span>
          <% end %>

          <%= link_to "https://www.google.com/search?q=#{CGI.escape(plant.english_name + ' plant')}&tbm=isch", target: "_blank", rel: "noopener noreferrer", class: "text-[10px] font-bold text-blue-400 hover:text-blue-300 flex items-center gap-1" do %>
            Photos
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" /></svg>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="text-center py-8">
    <div class="bg-[#333] w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-3">
        <svg class="w-8 h-8 text-green-500 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" /></svg>
    </div>
    <p class="text-xs text-gray-400 font-medium">No plants recommended yet.</p>
    <p class="text-[10px] text-gray-500 mt-1">Select an area and ask for suggestions.</p>
  </div>
<% end %>
