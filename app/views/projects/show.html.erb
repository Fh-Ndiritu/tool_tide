    <!-- Simple Vanilla JS for Tabs Switching -->
    <script>
      // Persistence Config
      const STORAGE_KEY_OUTER = 'tool_tide_outer_tab';
      const STORAGE_KEY_INNER = 'tool_tide_inner_tab';

      document.addEventListener("turbo:load", () => {
         // Restore Outer Tab
         const savedOuter = localStorage.getItem(STORAGE_KEY_OUTER);
         if (savedOuter) {
            switchOuterTab(savedOuter, false); // false = don't save again
         }

         // Restore Inner Tab (if active)
         const savedInner = localStorage.getItem(STORAGE_KEY_INNER);
         if (savedInner) {
            switchInnerTab(savedInner, false);
         }
      });

      function switchOuterTab(tabName, save = true) {
        if (save) localStorage.setItem(STORAGE_KEY_OUTER, tabName);

        const aiToolsBtn = document.getElementById('tab_ai_tools');
        const settingsBtn = document.getElementById('tab_settings');
        const aiToolsPanel = document.getElementById('panel_ai_tools');
        const settingsPanel = document.getElementById('panel_settings');

        const activeClasses = ['bg-gray-700', 'text-white', 'shadow-sm'];
        const inactiveClasses = ['text-gray-400', 'hover:text-gray-200'];

        if (tabName === 'ai_tools') {
          // Activate AI Tools
          aiToolsBtn?.classList.add(...activeClasses);
          aiToolsBtn?.classList.remove(...inactiveClasses);
          aiToolsPanel?.classList.remove('hidden');

          // Deactivate Settings
          settingsBtn?.classList.remove(...activeClasses);
          settingsBtn?.classList.add(...inactiveClasses);
          settingsPanel?.classList.add('hidden');
        } else {
          // Activate Settings
          settingsBtn?.classList.add(...activeClasses);
          settingsBtn?.classList.remove(...inactiveClasses);
          settingsPanel?.classList.remove('hidden');

          // Deactivate AI Tools
          aiToolsBtn?.classList.remove(...activeClasses);
          aiToolsBtn?.classList.add(...inactiveClasses);
          aiToolsPanel?.classList.add('hidden');
        }
      }

      function switchInnerTab(tabName, save = true) {
        if (save) localStorage.setItem(STORAGE_KEY_INNER, tabName);

        const tabs = ['style_presets', 'smart_fix', 'auto_fix', 'sketch'];
        const activeClasses = ['text-blue-400', 'border-blue-400'];
        const inactiveClasses = ['text-gray-300', 'border-transparent', 'hover:text-gray-200'];

        tabs.forEach(t => {
           const btn = document.getElementById(`tab_${t}`);
           const panel = document.getElementById(`panel_${t}`);

           if (t === tabName) {
              btn?.classList.add(...activeClasses);
              btn?.classList.remove(...inactiveClasses);
              panel?.classList.remove('hidden');
           } else {
              btn?.classList.remove(...activeClasses);
              btn?.classList.add(...inactiveClasses);
              panel?.classList.add('hidden');
           }
        });
      }
