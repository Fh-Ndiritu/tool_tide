<% content_for :title, "New issue" %>

<div class="max-w-xl mx-auto p-4 sm:p-6 lg:p-8">
  <div class="bg-white shadow-xl rounded-lg p-6 sm:p-8 border border-neutral-300">
    <h1 class="font-bold text-3xl text-text-dark mb-6 text-center">
      Submit New Feedback or Issue
    </h1>

    <%= render "form", issue: @issue %>

    <div class="mt-6 text-center">
      <%= link_to "Cancel and Go Back", issues_path,
          class: "rounded-md px-4 py-2 bg-neutral-100 hover:bg-neutral-300 text-text-dark inline-block font-medium transition duration-150 ease-in-out" %>
    </div>
  </div>
</div>
